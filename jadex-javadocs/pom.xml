	<properties>
		<project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
  	</properties>

	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<excludes>
					<exclude>**/*.java</exclude>
					<exclude>**/.svn/*</exclude>
				</excludes>
			</resource><!-- 
			<resource>
				<directory>src/test/java</directory>
				<excludes>
					<exclude>**/*.java</exclude>
					<exclude>**/.svn/*</exclude>
				</excludes> 
			</resource>-->
		</resources>

		<plugins>
			<!-- 1.5 for annotations in testcases. -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
        		<version>2.3.2</version>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
        		<version>2.1.2</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>install</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
		        <groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-javadoc-plugin</artifactId>
        		<version>2.8.1</version>
				<executions>
					<execution>
						<id>attach-javadoc</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<doctitle>Jadex Active Component Platform ${project.version} API.</doctitle>
							<windowtitle>Jadex Active Component Platform ${project.version} API.</windowtitle>
							<groups>
								<group>
									<title>Core Packages</title>
									<packages>jadex.commons*:jadex.bridge*</packages>
								</group>
								<group>
									<title>Micro Agent Packages</title>
									<packages>jadex.micro*</packages>
								</group>
								<group>
									<title>BPMN Process Packages</title>
									<packages>jadex.bpmn*</packages>
								</group>
								<group>
									<title>BDI Agent Packages</title>
									<packages>jadex.bdi*</packages>
								</group>
								<group>
									<title>Web Service Extension Packages</title>
									<packages>jadex.extension.ws*:jadex.extension.rs*</packages>
								</group>
								<group>
									<title>2D/3D Environment Extension Packages</title>
									<packages>jadex.extension.envsupport*</packages>
								</group>
								<group>
									<title>Agent-Group-Role (AGR) Extension Packages</title>
									<packages>jadex.extension.agr*</packages>
								</group>
							</groups>						
							<excludePackageNames>
								*impl*,
								jadex.base.gui.*tree*,
								jadex.base.gui.*filechooser*, <!-- doesn't work without '*'? -->
								jadex.base.gui.*jtable* <!-- doesn't work without '*'? -->
							</excludePackageNames>
							<show>public</show>
							<detectLinks>true</detectLinks>
							<includeDependencySources>true</includeDependencySources>
							<dependencySourceIncludes>
								<dependencySourceInclude>net.sourceforge.jadex:*</dependencySourceInclude>
							</dependencySourceIncludes>
						</configuration>
					</execution>
				</executions>
        	</plugin>

			<!--
				Make jar executable (cannot do this in standalone, because maven
				claims cyclic reference)
			-->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
        		<version>2.3.1</version>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<useUniqueVersions>false</useUniqueVersions>
							<mainClass>jadex.base.Starter</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>

			<!--
				copy all dependencies (including transitive dependencies) to lib
				directory, ease starting jadex without eclipse
			- ->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy</id>
						<phase>install</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/lib</outputDirectory>
							<overWriteReleases>true</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin> -->

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-gpg-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<id>sign-artifacts</id>
						<phase>install</phase>
						<goals>
							<goal>sign</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

