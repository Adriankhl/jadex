<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>jadex-platform-extension-webservice-desktop-jetty</artifactId>
	<packaging>jar</packaging>
	<name>jadex-platform-extension-webservice-desktop-jetty</name>
	<parent>
		<groupId>net.sourceforge.jadex</groupId>
		<artifactId>jadex-parent</artifactId>
		<version> 3.0-SNAPSHOT </version>
		<relativePath>../jadex-parent/pom.xml</relativePath>
	</parent>

	<description>
		The Jadex desktop webservice platform extension package contains
		functionality for using and providing WSDL web services and REST web services.
		It uses dependencies which are only available for Java SE.
	</description>
	
	<dependencies>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-platform-extension-webservice-desktop</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-server</artifactId>
			<version>9.3.1.v20150714</version>
		</dependency>
				
	</dependencies>
	
	<!-- Set scopes of standard jadex jars to provided for excluding them from dist -->
	<profiles>
		<profile>
			<id>dist</id>
			<dependencies>
				<dependency>
					<groupId>javassist</groupId>
					<artifactId>javassist</artifactId>
					<version>3.12.1.GA</version>
					<scope>provided</scope>
				</dependency>
				
				<dependency>
					<groupId>javax.activation</groupId>
					<artifactId>activation</artifactId>
					<version>1.1</version>
					<scope>provided</scope>
				</dependency>
				
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-platform</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
		
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-component</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
</project>