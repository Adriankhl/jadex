<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<MASDynamic name="heterogeneous_example">
	<!--
		ProductionLine Example...
	-->

	<!--
		System Properties: Definitions of the behaviors that agents can adopt
		and that makes them: - engage in coordinative activities - react to
		coordinative activities
	-->
	<system_properties>
		<role_occupations>
			<role_occupation name="sender" multiple="false">
				<agent id="Robot" />
				<agent id="Transport" />
			</role_occupation>
			<role_occupation name="receiver" multiple="false">
				<agent id="Robot" />
				<agent id="Transport" />
			</role_occupation>
		</role_occupations>
	</system_properties>



	<!--
		Causal links: Definition of the interdependencies between
		agent-behaviors.
	-->
	<causalities>
		<deco_links>
			<!-- The encated interdependency: -->
			<deco_link realization="by_ring" type="POSITIVE" name="send-receive" spaces="mycoordspace">
				<froms>
					<from>sender</from>
				</froms>
				<tos>
					<to>receiver</to>
				</tos>
			</deco_link>
		</deco_links>

		<!-- The detailed configuration of interdependency enactment. -->
		<deco-link-realizations>
			<realization id="by_ring">
				<from>		<!-- Published behaviors / events: -->
					<agent_element element="SendMediumMessageStep" agent_id="Robot" type="MICRO_STEP">
						<parameter_mappings>
							<mapping ref="message" name="message"/>
						</parameter_mappings>
					</agent_element>
					<agent_element element="SendMediumMessageStep" agent_id="Transport" type="MICRO_STEP">
						<parameter_mappings>
							<mapping ref="message" name="message"/>
						</parameter_mappings>
					</agent_element>
				</from>
				<!-- Coordination Medium configuration: -->
				<mechanism_configuration
					mechanism_id="deco4mas.mechanism.graph.RingGraphMechanism"
					agent_type="JADEX">
					<properties>
						<entry>
							<key>graph_file</key>
							<value>generated.conf.xml</value>
						</entry>
					</properties>
				</mechanism_configuration>
				<to>		<!-- Behaviors / events to be triggered upon reception: -->
					<agent_element element="ReceiveMediumMessageStep" agent_id="Robot" type="MICRO_STEP">
						<parameter_mappings>
							<mapping ref="message" name="message"/>
						</parameter_mappings>
					</agent_element>
					<agent_element element="ReceiveMediumMessageStep" agent_id="Transport" type="MICRO_STEP">
						<parameter_mappings>
							<mapping ref="message" name="message"/>
						</parameter_mappings>
					</agent_element>
				</to>
			</realization>
		</deco-link-realizations>
	</causalities>
</MASDynamic>