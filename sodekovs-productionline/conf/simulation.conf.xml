<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<simulation_configuration>

	<!-- Specifies a list of tasks, a task has to have an id (integer) and a list of steps. -->
	<!-- A step specifies a robot and which action he is executing in this steps. -->
	<!-- The transports between the robots and also the producer and consumer result implicitly -->
	<!-- from this specification. -->
	<tasks>
		<task id="1">
			<steps>
				<step robot="Robot1" action="A" />
				<step robot="Robot2" action="B" />
				<step robot="Robot2" action="C" />
				<step robot="Robot4" action="D" />
				<step robot="Robot3" action="C" />
				<step robot="Robot3" action="C" />
				<step robot="Robot5" action="B" />
				<step robot="Robot5" action="E" />
				<step robot="Robot6" action="G" />
				<step robot="Robot1" action="B" />
			</steps>
		</task>
		<task id="2">
			<steps>
				<step robot="Robot1" action="A" />
				<step robot="Robot2" action="E" />
				<step robot="Robot3" action="H" />
				<step robot="Robot3" action="C" />
				<step robot="Robot4" action="D" />
				<step robot="Robot5" action="E" />
				<step robot="Robot6" action="G" />
				<step robot="Robot4" action="I" />
			</steps>
		</task>
		<task id="3">
			<steps>
				<step robot="Robot4" action="I" />
				<step robot="Robot4" action="D" />
				<step robot="Robot6" action="E" />
				<step robot="Robot2" action="C" />
				<step robot="Robot4" action="D" />
				<step robot="Robot1" action="C" />
				<step robot="Robot5" action="E" />
				<step robot="Robot6" action="H" />
				<step robot="Robot5" action="B" />
				<step robot="Robot2" action="C" />
			</steps>
		</task>
		<task id="4">
			<steps>
				<step robot="Robot2" action="E" />
				<step robot="Robot3" action="C" />
				<step robot="Robot6" action="E" />
				<step robot="Robot2" action="C" />
				<step robot="Robot5" action="D" />
				<step robot="Robot1" action="C" />
				<step robot="Robot6" action="H" />
				<step robot="Robot3" action="A" />
				<step robot="Robot5" action="E" />
			</steps>
		</task>
		<!-- <task id="1" noSteps="10" noCaps="10"/> -->
		<!-- <task id="2" noSteps="10" noCaps="10"/> -->
	</tasks>
	
	<!-- Specifies the amount of different capabilities in each robot. -->
	<!-- For each robot a random value between min and max is used. -->
	<!-- min must be greater or equals than 1 and max must be greater or equals than min -->
	<!-- Default: min=1, max=1 -->
	<redundancy min="5" max="5" />
	
	<!-- Specifies the amount of work pieces to be processed by the system in each run. -->
	<!-- Set to 0 for unlimited amount. -->
	<!-- Default: 0 -->
	<workpieces>100</workpieces>
	
	<!-- Specifies the processing time in each agent (robot and transporter). -->
	<!-- For each agent a random value between min and max is used. -->
	<!-- max must be greater or equals than min. If not, the default is assumed-->
	<!-- Default: min=500, max=500 -->
	<processing_time min="150" max="400" />
	
	<!-- Specifies the buffer size for each robot. -->
	<!-- For each robot a random value between min and max is used. -->
	<!-- max must be greater or equals than min. If not, the default is assumed-->
	<!-- Default: min=5, max=5 -->
	<buffer_size min="6" max="6" />
	
	<!-- Specifies how often this configuration is automatically executed by the system. -->
	<!-- Default: 1 -->
	<runs>1</runs>
	
	<!-- Specifies the timeout (in milliseconds) within workpieces must arrive the storage. -->
	<!-- If they not arrive within this time an error condition is assumed and the current run is aborted. -->
	<!-- Note: Make sure, that the first workpiece arrives within this time too. Otherwise an error is detected. -->
	<!-- Default: 60000 -->
	<error_condition_timeout>600000</error_condition_timeout>
</simulation_configuration>