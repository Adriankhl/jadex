<?xml version="1.0" encoding="UTF-8"?>
<!--
  Application kernel.
-->
<componenttype xmlns="http://jadex.sourceforge.net/jadex-component"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-component
						http://jadex.sourceforge.net/jadex-component-2.0.xsd"
	name="KernelApplication" package="jadex.application">
	
	<imports>
		<import>jadex.commons.*</import>
		<import>jadex.bridge.*</import>
		<import>jadex.application.space.envsupport.*</import>
		<import>jadex.application.space.agr.*</import>
		<import>java.util.*</import>
	</imports>
	
	<properties>
		<property name="kernel.types" class="String[]">
			new String[]{"application.xml"}
		</property>
	</properties>
	
	<services>
		<providedservice class="IComponentFactory">
			<implementation proxytype="raw">
				new ApplicationComponentFactory(
					new Set[]
					{
						MEnvSpaceType.getXMLMapping(),
						MAGRSpaceType.getXMLMapping()
					}, 
					$component.getServiceProvider()
				)	
			</implementation>
		</providedservice>
	</services>
</componenttype>