<?xml version="1.0" encoding="UTF-8"?>
<xs:schema targetNamespace="http://jadex.sourceforge.net/jadex-agr"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:app="http://jadex.sourceforge.net/jadex-appdescriptor"
	xmlns="http://jadex.sourceforge.net/jadex-agr"
	elementFormDefault="qualified" attributeFormDefault="unqualified" version="2.0">

