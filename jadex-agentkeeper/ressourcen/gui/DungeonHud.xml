<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<!-- Your IDE now tells you that one <screen></screen> element is expected 
		here, etc. -->

	<useControls filename="nifty-default-controls.xml" />
	<useStyles filename="nifty-default-styles.xml" />


	<screen id="hud" controller="controller.CustomGuiController">
		<layer id="background" childLayout="center">


		</layer>
		<layer childLayout="center">
					<panel id="infopanel" x="50%" width="50%" height="5%"
				valign="top" align="right" childLayout="overlay"
				backgroundColor="#0002">
				<text id="infotext" style="nifty-label" color="#f00f" text="Hello World!"
				textHAlign="center" textVAlign="center" align="center" valign="center"/>
				</panel>


			<panel id="panel" x="10%" width="90%" y="85%" height="15%"
				valign="bottom" align="right" childLayout="vertical"
				backgroundColor="#0335">


				<panel id="panel_buttons" width="100%" valign="bottom"
					childLayout="horizontal" backgroundColor="#3035">

					<control name="button" label="Default Menu" id="DefaultSelector"
						align="right" valign="bottom" visibleToMouse="true">
						<effect>
							<onClick name="show" targetElement="panel_default"></onClick>
							<onClick name="hide" targetElement="panel_units"></onClick>
							<onClick name="hide" targetElement="panel_buildings"></onClick>
						</effect>
					</control>

					<control name="button" label="Units" id="UnitsSelector"
						align="right" valign="bottom" visibleToMouse="true">
						<effect>
							<onClick name="show" targetElement="panel_units"></onClick>
							<onClick name="hide" targetElement="panel_default"></onClick>
							<onClick name="hide" targetElement="panel_buildings"></onClick>
						</effect>
					</control>
					<control name="button" label="Buildings" id="BuildingsSelector"
						align="right" valign="bottom" visibleToMouse="true">
						<effect>
							<onClick name="show" targetElement="panel_buildings"></onClick>
							<onClick name="hide" targetElement="panel_units"></onClick>
							<onClick name="hide" targetElement="panel_default"></onClick>
						</effect>
					</control>
				</panel>

				<panel id="panel_content" width="100%" valign="bottom"
					childLayout="overlay" backgroundColor="#1230">

					<panel id="panel_default" width="100%" valign="bottom"
						childLayout="horizontal" backgroundColor="#3035">
						<control name="button" label="Fullscreen" id="FireButton"
							visibleToMouse="true">
							<interact onClick="fireFullscreen()" />
						</control>

						<control name="button" label="Grid" id="OptionsButton2"
							visibleToMouse="true">
							<interact onClick="setGrid()" />
						</control>

						<control name="button" label="Stats" id="OptionsButton3"
							visibleToMouse="true">
							<interact onClick="setPerform()" />
						</control>

						<control name="button" label="Exit" id="ExitButton"
							visibleToMouse="true">
							<interact onClick="quitGame()" />
						</control>

					</panel>


					<panel id="panel_units" width="100%" valign="bottom"
						childLayout="horizontal" backgroundColor="#0035" visible="false">
						<effect>
							<onStartScreen name="hide" targetElement="panel_units"></onStartScreen>
						</effect>
						<image filename="/gui/images/monster/kobold_item.png"
							height="95%">
							<interact onClick="setGrid()" />
						</image>
						<image filename="/gui/images/monster/goblin_item.png"
							height="95%">
							<interact onClick="setGrid()" />
						</image>
						<image filename="/gui/images/monster/warlock_item.png"
							height="95%">
							<interact onClick="setGrid()" />
						</image>
						<image filename="/gui/images/monster/orc_item.png" height="95%">
							<interact onClick="setGrid()" />
						</image>

					</panel>

					<panel id="panel_buildings" width="100%" valign="bottom"
						childLayout="horizontal" backgroundColor="#2005" visible="false">
						<control name="button" label="TestBuildings" id="TestBuildings"
							visibleToMouse="true">
						</control>
					</panel>
				</panel>

			</panel>


		</layer>
	</screen>

	<screen id="default"
		controller="jadex.extension.envsupport.observer.graphics.jmonkey.controller.GuiController">
		<layer id="background" childLayout="center">

		</layer>
		<layer id="foreground" childLayout="horizontal">

		</layer>
	</screen>
</nifty>