<plugin>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <package
            uri="http://jadex.sourceforge.net/gpmn"
            class="jadex.tools.gpmn.IGpmnPackage"
            genModel="model/gpmn.genmodel"/>
   </extension>

   <extension point="org.eclipse.emf.ecore.extension_parser">
      <parser
            type="gpmn"
            class="jadex.tools.gpmn.util.GpmnResourceFactoryImpl"/>
   </extension>
   
    <!-- register files as xml ressources -->
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<file-association content-type="org.eclipse.core.runtime.xml"
			file-extensions="gpmn"/>
	</extension>
   	<!-- set editor configuration -->
	<extension point="org.eclipse.wst.sse.ui.editorConfiguration">
   		<sourceViewerConfiguration
			class="org.eclipse.wst.xml.ui.StructuredTextViewerConfigurationXML"
			target="jadex.sourceforge.net.gpmn">
		</sourceViewerConfiguration>
	</extension>

</plugin>
