<?xml version="1.0" encoding="UTF-8"?>
	<!--
		<H3>This application shows how the automated simulation management
		works.</H3>
	-->
<applicationtype xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-application-2.0.xsd"
	name="AutomatedSimulationCenter" package="jadex.simulation">

	
	<componenttypes>
		<componenttype name="SimulationManager"
			filename="jadex/simulation/master/SimulationManager.agent.xml" />
			<componenttype name="RemoteSimulationClient"
			filename="jadex/simulation/remote/RemoteClientSimulator.agent.xml" />
	</componenttypes>
	
	<configurations>
	<configuration name="Simulate AntWorld with included Remote Client">
			<components>
				<component type="SimulationManager" master="true">
					<arguments>
						<argument name="simulationDescriptionFile">"../sodekovs-applications/src/main/java/sodekovs/antworld/example/Antworld-Conf.xml"</argument>			
					</arguments>
				</component>
				<component type="RemoteSimulationClient" master="false"/>
			</components>
		</configuration>
	<configuration name="Simulate AntWorld with included Remote Client - CISIS Conference Snapshot">
			<components>
				<component type="SimulationManager" master="true">
					<arguments>
						<argument name="simulationDescriptionFile">"../sodekovs-applications/src/main/java/sodekovs/antworld/example/cisis/CISIS-Conf.xml"</argument>			
					</arguments>
				</component>
				<component type="RemoteSimulationClient" master="false"/>
			</components>
		</configuration>
		<configuration name="Simulate Bikesharing Hamburg with included Remote Client">
			<components>
				<component type="SimulationManager" master="true">
					<arguments>
						<argument name="simulationDescriptionFile">"../sodekovs-applications/src/main/java/sodekovs/bikesharing/examples/HamburgSimulation-Conf.xml"</argument>			
					</arguments>
				</component>
				<component type="RemoteSimulationClient" master="false"/>
			</components>
		</configuration>
	<configuration name="Simulate MarsWorld with included Remote Client">
			<components>
				<component type="SimulationManager" master="true">
					<arguments>
						<argument name="simulationDescriptionFile">"../sodekovs-simulationcontrol/src/main/java/jadex/simulation/Configuration2.xml"</argument>			
					</arguments>
				</component>
			<component type="RemoteSimulationClient" master="false"/>
			</components>
		</configuration>
		<configuration name="Simulate IWSOS MarsWorld with included Remote Client">
			<components>
				<component type="SimulationManager" master="true">
					<arguments>
						<argument name="simulationDescriptionFile">"../sodekovs-simulationcontrol/src/main/java/jadex/simulation/IWSOSConfiguration.xml"</argument>			
					</arguments>
				</component>
			<component type="RemoteSimulationClient" master="false"/>
			</components>
		</configuration>
		<configuration name="Simulate MarsWorld">
			<components>
				<component type="SimulationManager" master="true">
					<arguments>
						<argument name="simulationDescriptionFile">"../sodekovs-simulationcontrol/src/main/java/jadex/simulation/Configuration2.xml"</argument>
					</arguments>
				</component>
			</components>
		</configuration>
		<configuration name="Simulate AgentNegotiation">
			<components>
				<component type="SimulationManager" master="true">
					<arguments>
						<argument name="simulationDescriptionFile">"../sodekovs-simulationcontrol/src/main/java/jadex/simulation/TestNegotiationConfiguration.xml"</argument>			
					</arguments>
				</component>
			</components>
		</configuration>
		<configuration name="Simulate AgentNegotiation with included Remote Client">
			<components>
				<component type="SimulationManager" master="true">
					<arguments>
						<argument name="simulationDescriptionFile">"../sodekovs-simulationcontrol/src/main/java/jadex/simulation/TestNegotiationConfiguration.xml"</argument>			
					</arguments>
				</component>
				<component type="RemoteSimulationClient" master="false"/>
			</components>
		</configuration>
	</configurations>
</applicationtype>
