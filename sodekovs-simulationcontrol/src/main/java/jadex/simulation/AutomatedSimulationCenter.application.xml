
	<!--
		<H3>This application shows how the automated simulation management
		works.</H3>
	-->
<applicationtype xmlns="http://jadex.sourceforge.net/jadex-application"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-application 
	                    http://jadex.sourceforge.net/jadex-application-2.0.xsd"
	name="AutomatedSimulationCenter" package="jadex.simulation">


	<imports>
		<import>deco4mas.coordinate.environment.CoordinationSpace</import>
	</imports>
	
	<componenttypes>
		<componenttype name="SimulationManager"
			filename="jadex/simulation/master/SimulationManager.agent.xml" />
			<componenttype name="RemoteSimulationClient"
			filename="jadex/simulation/remote/RemoteClientSimulator.agent.xml" />
	</componenttypes>
	
	<applications>
		<application name="Simulate MarsWorld">
			<components>
				<component type="SimulationManager" master="true">
					<arguments>
						<argument name="simulationDescriptionFile">"../sodekovs-simulationcontrol/src/main/java/jadex/simulation/Configuration2.xml"</argument>
					</arguments>
				</component>
			</components>
		</application>
		<application name="Simulate MarsWorld with included Remote Client">
			<components>
				<component type="SimulationManager" master="true">
					<arguments>
						<argument name="simulationDescriptionFile">"../sodekovs-simulationcontrol/src/main/java/jadex/simulation/Configuration2.xml"</argument>			
					</arguments>
				</component>
			<component type="RemoteSimulationClient" master="false"/>
			</components>
		</application>
		<application name="Simulate AgentNegotiation">
			<components>
				<component type="SimulationManager" master="true">
					<arguments>
						<argument name="simulationDescriptionFile">"../sodekovs-simulationcontrol/src/main/java/jadex/simulation/TestNegotiationConfiguration.xml"</argument>			
					</arguments>
				</component>
			</components>
		</application>
		<application name="Simulate AgentNegotiation with included Remote Client">
			<components>
				<component type="SimulationManager" master="true">
					<arguments>
						<argument name="simulationDescriptionFile">"../sodekovs-simulationcontrol/src/main/java/jadex/simulation/TestNegotiationConfiguration.xml"</argument>			
					</arguments>
				</component>
				<component type="RemoteSimulationClient" master="false"/>
			</components>
		</application>
	</applications>
</applicationtype>
