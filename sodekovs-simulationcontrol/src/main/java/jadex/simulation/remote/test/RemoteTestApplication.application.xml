<?xml version="1.0" encoding="UTF-8"?>
<!-- <H3>Shop scenario application descriptor</H3> Testing the functionality 
	of the remote components for executing simulation experiments. -->
<applicationtype xmlns="http://jadex.sourceforge.net/jadex-application"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-application 
	                    http://jadex.sourceforge.net/jadex-application-2.0.xsd"
	name="RemoteTestApplication" package="jadex.simulation.remote.test">

	<imports>
		<import>jadex.commons.service.clock.IClockService</import>
		<import>jadex.commons.service.SServiceProvider</import>
		<import>jadex.commons.future.*</import>
	</imports>

	<componenttypes>
		<componenttype name="TestAgent"
			filename="jadex/simulation/remote/test/RemoteTestAgent.agent.xml" />
		<componenttype name="ClientSimulator"
			filename="jadex/simulation/remote/RemoteClientSimulator.agent.xml" />
	</componenttypes>

	<applications>
		<application name="Simple Test">
			<components>
				<component type="TestAgent" />
				<component type="ClientSimulator" />
			</components>
		</application>
	</applications>

</applicationtype>