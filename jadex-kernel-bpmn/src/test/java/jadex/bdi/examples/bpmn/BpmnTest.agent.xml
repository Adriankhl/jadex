<!--
	<H3>The Bpmn Test agent.</H3>

	It has the task to execute some BPMN plans.
	(Based on the Hello World example)
-->

<agent xmlns="http://jadex.sourceforge.net/jadex-bdi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	name="BpmnTest"
	package="jadex.bdi.examples.bpmn">
	
	<imports>
		<!-- HACK! to load the processors at runtime -->
		<import>jadex.bdi.interpreter.bpmn.model.state.task.*</import>
	</imports>
	
	<beliefs>
		<belief name="msg" class="String" exported="true">
			<fact>"Welcome to Jadex."</fact>
		</belief>
	</beliefs>

	<plans>
		<!-- a simple test case plan -->
		<plan name="testbpmn">
			<!-- <body impl="jadex/bdi/interpreter/bpmn/test/TestCasePlan.net" type="bpmn"/> -->
			<body impl="jadex/bdi/examples/bpmn/TestCasePlan.net" type="bpmn"/>
		</plan>
	</plans>
	
	<properties>
	 	<property name="debugging">false</property>
	 	<property name="profiling">false</property>
	</properties>

	<configurations>
		<configuration name="default">
			<plans>
				<!-- Start testbpmn plan when agent is born. -->
				<initialplan ref="testbpmn"/>
			</plans>
		</configuration>
	</configurations>

</agent>

