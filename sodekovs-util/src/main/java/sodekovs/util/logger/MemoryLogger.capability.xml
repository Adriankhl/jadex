	<!--
		<H3> MemoryLogger capability</H3>
		Logs the memory consumption of the application.
	-->
<capability xmlns="http://jadex.sourceforge.net/jadex-bdi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	package="sodekovs.util.logger" name="MemoryLogger">


	<beliefs>
		<!--  The id is part of the filename -->
		<beliefref name="MemoryLoggerID">
		<abstract/>
		 </beliefref>		
	</beliefs>

	<plans>
		<!--the plan to start and perform the logging. -->
		<plan name="LogMemory">
			<body class="MemoryLoggerPlan">
			</body>
		</plan>
	</plans>


	<configurations>
		<!--  init cap	-->
		<configuration name="default">
			<plans>
				<initialplan ref="LogMemory"></initialplan>
			</plans>
		</configuration>
	</configurations>
</capability>
