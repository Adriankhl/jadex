<?xml version="1.0" encoding="UTF-8"?>
<!-- <H3>This application shows how the automated simulation management works.</H3> -->
<applicationtype xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-application-2.0.xsd"
	name="BenchmarkingExample" package="sodekovs.benchmarking.examples">


	<componenttypes>
		<componenttype name="BenchmarkingManager"
			filename="sodekovs/benchmarking/manager/BenchmarkingManager.agent.xml" />
		<componenttype name="BenchmarkOrderer"
			filename="sodekovs/benchmarking/orderer/BenchmarkingOrderer.agent.xml" />
	</componenttypes>

	<configurations>
		<configuration name="Benchmark MarsWorld with included Remote Client">
			<components>
				<component type="BenchmarkOrderer" master="false">
					<arguments>
						<argument name="scheduleDescriptionFile">"../sodekovs-benchmarking/src/main/java/sodekovs/benchmarking/examples/TestBenchmark2.xml"
						</argument>
					</arguments>
				</component>
				<component type="BenchmarkingManager" master="false" />
			</components>
		</configuration>
	</configurations>
</applicationtype>
