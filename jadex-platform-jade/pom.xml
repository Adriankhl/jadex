<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>jadex</groupId>
  <artifactId>jadex-platform-jade</artifactId>
  <packaging>jar</packaging>
  <version>2.0-beta4</version>
  <name>jadex-platform-jade</name>
  <!-- <url>http://jadex.sourceforge.net</url> -->
  <parent>
    <groupId>jadex</groupId>
    <artifactId>jadex-settings</artifactId>
    <version>2.0-beta4</version>
    <relativePath>../src/main/config/jadex-settings-pom.xml</relativePath>
  </parent>
  <build>
    <resources>
      <resource>
      	<directory>src/main/java</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <!-- XMLDecoder with classloader only in 1.5 -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>jadex.adapter.jade.Platform</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
  	<repository>
  		<id>project</id>
  		<name>Maven Project Repository</name>
  		<url>file:///${basedir}/lib</url>
  	</repository>
  </repositories>
  <dependencies>
  	<dependency>
  		<groupId>jadex</groupId>
  		<artifactId>jadex-platform-base</artifactId>
  		<version>2.0-beta4</version>
  	</dependency>
    <dependency>
    	<groupId>jade</groupId>
    	<artifactId>jade</artifactId>
    	<version>3.6.1</version>
    	<type>pom</type>
	</dependency>
  </dependencies>
</project>
