<!--
  Standalone platform properties.
-->
<properties xmlns="http://jadex.sourceforge.net/jadexconf"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadexconf 
	                    http://jadex.sourceforge.net/configuration.xsd"
	name="services_conf">
	
	<properties type="platform_standalone" name="lars">
		<property type="platformname">lars</property>
		<property type="platform_shutdown_time">1000</property>
		<property type="welcome">true</property>
		<property type="autoshutdown">true</property>
		
		<properties type="services">
			<property type="jadex.commons.service.library.ILibraryService" name="library_service">
				new jadex.commons.service.library.LibraryService()
			</property>
			
			<property type="jadex.commons.service.threadpool.ThreadPoolService" name="threadpool_service">
				new jadex.commons.service.threadpool.ThreadPoolService(
					//new jadex.commons.concurrent.java5.JavaThreadPool()
					new jadex.commons.concurrent.ThreadPool(
						new jadex.commons.concurrent.DefaultThreadPoolStrategy(0, 20, 30000)))
			</property>
						
			<property type="jadex.bridge.IComponentManagementService" name="cms_service">
				new jadex.jade.service.ComponentManagementService($platform, false)
			</property> 			
			
			<property type="jadex.base.fipa.IDF" name="df_service">
				new jadex.jade.service.DirectoryFacilitatorService($platform)
			</property>
			
			<property type="jadex.bridge.IMessageService" name="message_service">
			  	new jadex.jade.service.MessageService($platform,
                new jadex.bridge.MessageType[]
                {
                    new jadex.base.fipa.FIPAMessageType()
                })
            </property>
			
			<!-- Clock service. -->
			<property type="jadex.commons.service.clock.IClockService" name="clock_service">
				new jadex.commons.service.clock.ClockService(
					new jadex.commons.service.clock.SystemClock("system_clock", 100,
					(IThreadPool)jadex.commons.service.SServiceProvider.getService($platform, jadex.commons.service.threadpool.ThreadPoolService.class)))
//				new jadex.base.clock.SimulationEventClock("simulation_clock",
//					System.currentTimeMillis(), 200))
			</property>

			<property type="jadex.base.ISimulationService" name="simulation_service">
				new jadex.base.SimulationService($platform)
			</property>
		
			<property type="jadex.commons.service.execution.IExecutionService" name="execution_service">
				new jadex.commons.service.execution.AsyncExecutionService(
					(IThreadPool)jadex.commons.service.SServiceProvider.getService($platform, jadex.commons.service.threadpool.ThreadPoolService.class))
			</property>
		</properties>
	</properties>
	
</properties>