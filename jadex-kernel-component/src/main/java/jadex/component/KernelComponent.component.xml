<?xml version="1.0" encoding="UTF-8"?>
<!--
  Component kernel.
-->
<componenttype xmlns="http://jadex.sourceforge.net/jadex-component"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-component
						http://jadex.sourceforge.net/jadex-component-2.0.xsd"
	name="KernelComponent" package="jadex.component">
	
	<imports>
		<import>jadex.commons.*</import>
		<import>jadex.bridge.*</import>
	</imports>
	
	<properties>
		<property name="kernel.types" class="String[]">
			new String[] {"component.xml"}
		</property>
	</properties>
	
	<services>
		<providedservice class="IComponentFactory">
			<implementation>
				new ComponentComponentFactory($component.getServiceProvider())
			</implementation>
		</providedservice>
	</services>
</componenttype>