<?xml version="1.0" encoding="UTF-8"?>
<!--
  Multi kernel component.
-->
<componenttype xmlns="http://jadex.sourceforge.net/jadex-component"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-component
						http://jadex.sourceforge.net/jadex-component-2.0.xsd"
	name="KernelMulti" package="jadex.component">
	
	<imports>
		<import>jadex.bridge.*</import>
	</imports>
	
	<arguments>
		<argument name="defaultkernels">null</argument>
		<argument name="ignorekernels">new String[] {"KernelBDI.component.xml"}</argument>
		<argument name="ignoreextensions">null</argument>
	</arguments>
	
	<componenttypes>
		<componenttype name="KernelComponent" filename="jadex/component/KernelComponent.component.xml"/>
	</componenttypes>
	
	<properties>
		<property name="kernel.types" class="String[]">
			new String[]{}
		</property>
	</properties>
	
	<services>
		<providedservice class="IMultiKernelNotifierService">
			<implementation>
				new jadex.kernelbase.MultiKernelNotifierService($component)
			</implementation>
		</providedservice>
		<providedservice class="IComponentFactory">
			<implementation>
				new jadex.kernelbase.MultiFactory($component, $args.defaultkernels, $args.ignorekernels, $args.ignoreextensions)
			</implementation>
		</providedservice>
	</services>
	
	<configurations>
		<configuration name="component_kernel">
			<components>
				<component name="kernel_component" type="KernelComponent"/>
			</components>
		</configuration>
		<configuration name="no_kernel"/>
	</configurations>
</componenttype>