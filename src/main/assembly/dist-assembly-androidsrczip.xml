<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">

	<id>sources</id>

	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>
	
	<moduleSets>
		<moduleSet>
		<excludes>
			<exclude>net.sourceforge.jadex:jadex-android-example-project-maven</exclude>
			<exclude>net.sourceforge.jadex:jadex-android-integration-test</exclude>
		</excludes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>sources/${module.artifactId}</outputDirectory>
						<includes>
							<include>src/**</include>
							<include>res/**</include>
							<include>lib/**</include>
							<include>docs/**</include>
							<include>**/pom.xml</include>
							<include>project.properties</include>
							<include>AndroidManifest.xml</include>
						</includes>
						<excludes>
							<exclude>**/bin/**</exclude>
							<exclude>**/target/**</exclude>
						</excludes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>

	<fileSets>
		<fileSet>
			<directory>docs/android/</directory>
			<outputDirectory>sources/docs/android/</outputDirectory>
			<excludes>
				<exclude>**/bin/**</exclude>
				<exclude>**/target/**</exclude>
			</excludes>
		</fileSet>
<!-- 		<fileSet> -->
<!-- 			<directory>docs/android/</directory> -->
<!-- 			<outputDirectory>sources/docs/android/</outputDirectory> -->
<!-- 		</fileSet> -->
	</fileSets>
	
	<files>
		<file>
			<source>pom.xml</source>
			<outputDirectory>sources/</outputDirectory>
			<destName>pom.xml</destName>
		</file>
		
		<file>
			<source>docs/android/readme-building.txt</source>
			<outputDirectory>sources</outputDirectory>
		</file>
				
		<!-- Copy files required for distribution build -->
		<file>
			<source>docs/junit-3.8.1.jar</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/readme.txt</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/license.txt</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/api-changes.txt</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/jcc.settings.xml</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/default.settings.xml</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/xs3p.xsl</source>
			<outputDirectory>sources/docs</outputDirectory>
		</file>
		<file>
			<source>docs/android/readme-building.txt</source>
			<outputDirectory>sources/docs/android</outputDirectory>
		</file>

		<file>
			<source>src/main/assembly/dist-assembly-androidsrczip.xml</source>
			<outputDirectory>sources/src/main/assembly</outputDirectory>
		</file>
		<file>
			<source>src/main/assembly/dist-assembly-android.xml</source>
			<outputDirectory>sources/src/main/assembly</outputDirectory>
		</file>
		<file>
			<source>src/main/assembly/dist-assembly-androidexampleprojectzip.xml</source>
			<outputDirectory>sources/src/main/assembly</outputDirectory>
		</file>
		<file>
			<source>pom-android-dist.xml</source>
			<outputDirectory>sources</outputDirectory>
		</file>
	</files>

</assembly>