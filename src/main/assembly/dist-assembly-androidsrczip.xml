<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">

	<id>sources</id>

	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<moduleSets>
		<moduleSet>
			<excludes>
				<exclude>
					net.sourceforge.jadex:jadex-android-parent
				</exclude>
				<exclude>
					net.sourceforge.jadex:jadex-android-antlr
				</exclude>
				<exclude>
					net.sourceforge.jadex:jadex-android-beans
				</exclude>
				<exclude>
					net.sourceforge.jadex:jadex-android-misc
				</exclude>
				<exclude>
					net.sourceforge.jadex:jadex-android-stax-api
				</exclude>
				<exclude>
					net.sourceforge.jadex:jadex-android-xmlpull
				</exclude>
			</excludes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>sources/modules/${module.artifactId}</outputDirectory>
						<includes>
							<include>src/**</include>
							<include>lib/**</include>
							<include>docs/**</include>
							<include>**/pom.xml</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>
					net.sourceforge.jadex:jadex-android-parent
				</include>
				<include>
					net.sourceforge.jadex:jadex-android-antlr
				</include>
				<include>
					net.sourceforge.jadex:jadex-android-beans
				</include>
				<include>
					net.sourceforge.jadex:jadex-android-misc
				</include>
				<include>
					net.sourceforge.jadex:jadex-android-stax-api
				</include>
				<include>
					net.sourceforge.jadex:jadex-android-xmlpull
				</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>sources/${module.artifactId}</outputDirectory>
						<includes>
							<include>src/**</include>
							<include>lib/**</include>
							<include>docs/**</include>
							<include>**/pom.xml</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>

	<fileSets>
		<fileSet>
			<directory>docs/android/</directory>
			<outputDirectory>sources/docs/android/</outputDirectory>
		</fileSet>
	</fileSets>

	<files>
		<file>
			<source>docs/android/jadex-android-standalone-project-pom.xml</source>
			<outputDirectory>sources/</outputDirectory>
			<destName>pom.xml</destName>
		</file>

		<file>
			<source>src/main/assembly/dist-assembly-androidsrczip.xml</source>
			<outputDirectory>sources/src/main/assembly</outputDirectory>
		</file>
		<file>
			<source>src/main/assembly/dist-assembly-android.xml</source>
			<outputDirectory>sources/src/main/assembly</outputDirectory>
		</file>
		<file>
			<source>src/main/assembly/dist-assembly-androidexampleprojectzip.xml</source>
			<outputDirectory>sources/src/main/assembly</outputDirectory>
		</file>
	</files>

</assembly>