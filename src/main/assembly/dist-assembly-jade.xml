<assembly>
  
  <id>dist</id>
  
  <formats>
    <format>zip</format>
  </formats>
  
  <includeBaseDirectory>true</includeBaseDirectory>
  
  <moduleSets>
    <moduleSet>
 
      <includes>
        <include>jadex:jadex-jade-launch</include>
        <include>jadex:jadex-platform-jade</include>
        <include>jadex:jadex-applications-bdi</include>
        <include>jadex:jadex-applications-micro</include>
      </includes>
      
      <binaries>
      	<outputFileNameMapping>${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
        <outputDirectory>lib</outputDirectory>
        <unpack>false</unpack>
      </binaries>
      
      <sources>
        <includeModuleDirectory>false</includeModuleDirectory>
        <fileSets>
          <fileSet>
            <outputDirectory>${artifactId}</outputDirectory>
            <includes>
              <include>src/**</include>
              <include>pom.xml</include>
            </includes>
          </fileSet>
          <fileSet>
            <outputDirectory>${artifactId}</outputDirectory>
            <includes>
              <include>lib/**</include>
            </includes>
          </fileSet>
        </fileSets>
      </sources>
 
    </moduleSet>
  </moduleSets>

  <fileSets>
    <fileSet>
      <directory>/target/site/</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>apidocs/**</include>
      </includes>
    </fileSet>
  </fileSets>
  
  <files>
    <file>
      <source>pom.xml</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>/src/main/config/jadex-settings-pom.xml</source>
      <outputDirectory>/src/main/config</outputDirectory>
    </file>
    <file>
      <source>docs/readme.txt</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>docs/license.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>docs/api-changes.txt</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>docs/jcc.project</source>
      <outputDirectory>/lib</outputDirectory>
    </file>
    <file>
      <source>docs/applications.jccproject.xml</source>
      <outputDirectory>/lib</outputDirectory>
    </file>
    <file>
      <source>docs/jadex-jade.bat</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>docs/howtostart-jade.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
  </files>

</assembly>