<!-- <H3>The control center agent</H3> Main platform administration user 
	interface. -->
<agent xmlns="http://jadex.sourceforge.net/jadex-bdi" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	name="JCC" package="jadex.tools.jcc">

	<imports>
		<import>jadex.bridge.*</import>
		<import>jadex.commons.service.library.*</import>
	</imports>

	<beliefs>
		<belief name="jcc" class="ControlCenter" />
	</beliefs>
	
	<events>
		<!-- Dummy fipa msg to avoid severe logging message. -->
		<messageevent name="fipamsg" type="fipa"/>
	</events>
	
	<services>
		<requiredservice name="messageservice" class="IMessageService" scope="platform" />
		<requiredservice name="libservice" class="ILibraryService" scope="platform" />
		<requiredservice name="cms" class="IComponentManagementService"	scope="platform" />
		<requiredservice name="rms" class="IRemoteServiceManagementService"	scope="platform" />
	</services>

	<properties>
		<!-- Only print severe messages and ignore warnings, e.g. from unhandled 
			messages received by conversation center. -->
		<property name="logging.level">java.util.logging.Level.SEVERE</property>
		<!-- <property name="debugging">true</property> -->
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="jcc">
					<fact>
						new ControlCenter($scope.getExternalAccess(),
						" jadex.tools.starter.StarterPlugin"
						+ " jadex.tools.generic.DFServicePlugin"
						+ " jadex.tools.convcenter.ConversationPlugin"
						+ " jadex.tools.comanalyzer.ComanalyzerPlugin"
						+ " jadex.tools.testcenter.TestCenterPlugin"
						// + " jadex.tools.jadexdoc.JadexdocPlugin"
						+ " jadex.tools.simcenter.SimCenterPlugin"
						+ " jadex.tools.debugger.DebuggerPlugin"
						// + " jadex.tools.ruleprofiler.RuleProfilerPlugin"
						+ " jadex.tools.generic.LibraryServicePlugin"
						+ " jadex.tools.generic.AwarenessComponentPlugin"
						+ " jadex.base.gui.componentviewer.ComponentViewerPlugin"
						+ " jadex.tools.deployer.DeployerPlugin"
						+ " jadex.tools.generic.StarterServicePlugin")
					</fact>
				</initialbelief>
			</beliefs>
		</configuration>
	</configurations>

</agent>
