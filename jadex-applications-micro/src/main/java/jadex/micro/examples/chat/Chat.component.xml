<?xml version="1.0" encoding="UTF-8"?>
<!--
  Chat component.
-->
<componenttype xmlns="http://jadex.sourceforge.net/jadex-component"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-component
						http://jadex.sourceforge.net/jadex-component-2.0.xsd"
	name="chat" package="jadex.micro.examples.chat">
	
	<imports>
		<import>jadex.bridge.service*</import>
	</imports>
	
	<services>
		<providedservice class="IChatService" implementation="ChatService"/>
		<requiredservice name="chatservices" class="IChatService" multiple="true">
			<binding dynamic="true" scope="global"/>
		</requiredservice>
		<requiredservice name="mychatservice" class="IChatService">
			<binding scope="local"/>
		</requiredservice>
	</services>
	
	<!-- <behavior file="jadex.micro.examples.chat.ChatAgent"/> -->
	
</componenttype>