<!--
	<H3>JavaspaceManager agent.</H3>

	This agent is responsible to start a tuple space environment.<br> 
	[Here, the TSpaces implementation (http://www.almaden.ibm.com/cs/tspaces/) is used.] 
-->
<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="JavaspaceManager"
	package="deco4mas.mechanism.tspaces.server">

	<imports>
		<import>jadex.adapter.fipa.*</import>
		<import>jadex.runtime.*</import>
		<import>jadex.planlib.*</import>
		<!-- <import>deco4mas.*</import> -->
		<!--<import>deco4mas.mechanism.tspaces.server.StartTSpacePlan.java</import>
		<import>com.ibm.tspaces.TupleSpaceException</import>
		<import>com.ibm.tspaces.lock.LMAbortedException</import> 
		<import>com.ibm.tspaces.server.CheckpointException</import>
		<import>com.ibm.tspaces.server.RollbackException</import>
		<import>com.ibm.tspaces.server.TSServer</import>-->
	</imports>
	
	<beliefs>
		
		<belief name="space_id" class="String" exported="true">
			<fact>"cooordination_tspace"</fact>		<!-- default value. -->						
		</belief>
	
	</beliefs>
	
	<plans>
		
		<!-- Start a javaspace instance. -->
		<plan name="start_tspace">
			<body class="StartTSpacePlan" />	
		</plan>
		
	</plans>
	
	<configurations>
		<configuration name="default">
			<plans>
				<initialplan ref="start_tspace" />		
			</plans>
		</configuration>
	</configurations>
</agent>