<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<MASDynamic name="iograph_example">
	<!--
		IOGraph Example: 2D Environment-Interaction exemplifies how
		publications of Coordination Information can be specified by
		a given IOGraph so that these information are not passed via
		broadcast to all receiver agent but only to the ones specified 
		in the given IOGraph.
	-->

	<!--
		System Properties: Definitions of the behaviors that agents can adopt
		and that makes them: - engage in coordinative activities - react to
		coordinative activities
	-->
	<system_properties>
		<role_occupations>
			<role_occupation name="sender" multiple="false">
				<agent id="Graph" />
				<agent id="BDIGraph" />
			</role_occupation>
			<role_occupation name="receiver" multiple="false">
				<agent id="Graph" />
				<agent id="BDIGraph" />
			</role_occupation>
		</role_occupations>
	</system_properties>


	<!--
		Causal links: Definition of the interdependencies between
		agent-behaviors.
	-->
	<causalities>
		<deco_links>
			<!-- The encated interdependency: -->
			<deco_link realization="by_graph" type="POSITIVE" name="send-receive" spaces="mycoordspace">
				<froms>
					<from>sender</from>
				</froms>
				<tos>
					<to>receiver</to>
				</tos>
			</deco_link>
		</deco_links>

		<!-- The detailed configuration of interdependency enactment. -->
		<deco-link-realizations>
			<realization id="by_graph">
				<from>		<!-- Published behaviors / events: -->
					<agent_element element="SendStep" agent_id="Graph" type="MICRO_STEP">
						<parameter_mappings>
							<mapping ref="id" name="id"/>
						</parameter_mappings>
					</agent_element>
					<agent_element element="send_message" agent_id="BDIGraph" type="BDI_GOAL">
						<parameter_mappings>
							<mapping ref="id" name="message"/>
						</parameter_mappings>
					</agent_element>
				</from>
				<!-- Coordination Medium configuration: -->
				<mechanism_configuration
					mechanism_id="deco4mas.mechanism.graph.IOGraphMechanism"
					agent_type="JADEX">
					<properties>
						<entry>
							<key>graph_file</key>
							<value>deco4mas/examples/iograph/iograph.xml</value>
						</entry>
					</properties>
				</mechanism_configuration>
				<to>		<!-- Behaviors / events to be triggered upon reception: -->
					<agent_element element="ReceiveStep" agent_id="Graph" type="MICRO_STEP">
						<parameter_mappings>
							<mapping ref="id" name="receivedId"/>
						</parameter_mappings>
					</agent_element>
					<agent_element element="receive_message" agent_id="BDIGraph" type="INTERNAL_EVENT">
						<parameter_mappings>
							<mapping ref="id" name="receivedId"/>
						</parameter_mappings>
					</agent_element>
				</to>
			</realization>
		</deco-link-realizations>
	</causalities>
</MASDynamic>