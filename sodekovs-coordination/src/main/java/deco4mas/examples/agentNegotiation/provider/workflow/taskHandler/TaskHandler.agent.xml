
	<!--
		<H3>task executer</H3>
	-->

<agent xmlns="http://jadex.sourceforge.net/jadex-bdi" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	name="taskHandler" package="deco4mas.examples.agentNegotiation.provider.workflow.taskHandler">
	<imports>
		<import>jadex.base.fipa.*</import>
		<import>jadex.commons.concurrent.IResultListener</import>
		<import>jadex.bpmn.runtime.*</import>
		<import>jadex.bridge.IComponentIdentifier</import>
	</imports>

	<capabilities>
		<capability name="procap"
			file="jadex.bdi.planlib.protocols.request.Request" />
	</capabilities>

	<beliefs>
		<belief name="taskListener" class="IResultListener" exported="true" />
		<belief name="taskName" class="String" exported="true" />
		<belief name="workflow" class="IComponentIdentifier" exported="true" />
	</beliefs>

	<goals>
		<achievegoalref name="rp_initiate">
			<concrete ref="procap.rp_initiate" />
		</achievegoalref>
	</goals>

	<plans>
		<plan name="executeTask">
			<body class="ExecuteTaskPlan" />
		</plan>
	</plans>
	
	<expressions>
		<condition name="taskListenerPresent" language="jcl">
			$beliefbase.taskListener!=null
			</condition>
	</expressions>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="procap.timeout">
					<fact>-1L</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="executeTask" />
			</plans>
		</configuration>
	</configurations>

</agent>

