
	<!--
		<H3>master service creator</H3>
	-->

<agent xmlns="http://jadex.sourceforge.net/jadex-bdi" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	name="MasterServiceCreator" package="deco4mas.examples.agentNegotiation.sa.masterSa">

	<imports>
		<import>deco4mas.examples.agentNegotiation.*</import>
		<import>deco4mas.examples.agentNegotiation.decoMAS.*</import>
		<import>deco4mas.examples.agentNegotiation.decoMAS.dataObjects.*</import>
		<import>deco4mas.examples.agentNegotiation.sa.*</import>
	</imports>

	<beliefs>
		<beliefset name="services" class="ServiceType"
			exported="true" />
		<beliefset name="agentTypes" class="AgentType" exported="true"/>
		<beliefset name="serviceAgentConfigs" class="ServiceAgentConfig" exported="true" />
	</beliefs>

	<goals>
		<achievegoal name="initialiseSa"></achievegoal>
	</goals>

	<plans>
		<plan name="initialiseSa">
			<body class="InitialiseSaPlan"></body>
			<trigger>
				<goal ref="initialiseSa" />
			</trigger>
		</plan>
	</plans>

	<configurations>
		<configuration name="default">
			<goals>
				<initialgoal ref="initialiseSa"></initialgoal>
			</goals>
		</configuration>
	</configurations>

</agent>

