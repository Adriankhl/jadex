
	<!--
		<H3>Logger agent</H3>
	-->

<agent xmlns="http://jadex.sourceforge.net/jadex-bdi" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	name="Logger" package="deco4mas.examples.agentNegotiation.evaluate.logger">
	<imports>
		<import>jadex.bridge.IComponentIdentifier</import>
		<import>jadex.base.fipa.*</import>
		<import>deco4mas.examples.agentNegotiation.evaluate.*</import>
		<import>jadex.bdi.planlib.protocols.*</import>
	</imports>

	<beliefs>
		<beliefset name="logInformations" class="LogInformation"/>
	</beliefs>

	<goals>
		<achievegoal name="informationProcess">
			<parameter name="id" class="String"></parameter>
			<parameter name="value" class="Long"></parameter>
		</achievegoal>
	</goals>

	<plans>
		<plan name="evaluate">
			<body class="EvaluationPlan">
			</body>
			<trigger>
				<messageevent ref="evaluateEvent" />
			</trigger>
		</plan>
		<plan name="informationReceive">
			<body class="InformationReceivePlan">
			</body>
			<trigger>
				<goal ref="informationProcess"></goal>
			</trigger>
		</plan>
	</plans>

	<events>
		<messageevent name="evaluateEvent" direction="receive"
			type="fipa">
			<parameter name="performative" class="String" direction="fixed">
				<value>SFipa.INFORM</value>
			</parameter>
<!--			<parameter name="mode" class="String"></parameter>-->
		</messageevent>
		
	</events>

	<configurations>
		<configuration name="default">
			<plans>
<!--				<initialplan ref="assignSa"></initialplan>-->
			</plans>
		</configuration>
	</configurations>
</agent>

