<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<MASDynamic name="belief_set">
	<!--
		Tuple Space Example: 2D Environment-Interaction Exemplifies how
		publications of Coordination Information can be triggered by micro 
		agent steps. Activities in the Sender agent "SenderAgent.java"
		are starting IComponentSteps. These modifications are observed by
		a Coordination Endpoint that publishes the changes of the agent 
		state on a Coordination Medium. Here, a tuple-space is used to
		resemble interactions in a two-dimensional environment. An agent
		type (SenderAgent.java) is publishing initializations of steps.
		Other agents (ReceiverAgent.java) are receiving these publications 
		which results in the starting of specified steps in the receiving agent.
	-->

	<!--
		System Properties: Definitions of the behaviors that agents can adopt
		and that makes them: - engage in coordinative activities - react to
		coordinative activities
	-->
	<system_properties>
		<role_occupations>
			<role_occupation name="sender" multiple="false">
				<agent id="Sender" />
			</role_occupation>
			<role_occupation name="receiver" multiple="false">
				<agent id="Receiver" />
			</role_occupation>
		</role_occupations>
	</system_properties>


	<!--
		Causal links: Definition of the interdependencies between
		agent-behaviors.
	-->
	<causalities>
		<deco_links>
			<!-- The encated interdependency: -->
			<deco_link realization="by_tuple" type="POSITIVE" name="send-receive">
				<froms>
					<from>sender</from>
				</froms>
				<tos>
					<to>receiver</to>
				</tos>
			</deco_link>
		</deco_links>

		<!-- The detailed configuration of interdependency enactment. -->
		<deco-link-realizations>
			<realization id="by_tuple">
				<from>		<!-- Published behaviors / events: -->
					<agent_element element="CounterIncrementStep" agent_id="Sender" type="MICRO_STEP">
						<parameter_mappings>
							<mapping ref="counter" name="counter"/>
						</parameter_mappings>
					</agent_element>
				</from>
				<!-- Coordination Medium configuration: -->
				<mechanism_configuration
					mechanism_id="deco4mas.mechanism.mediated.tspaces.Mediated(TSpaces)"
					agent_type="JADEX">
					<properties>
						<entry>
							<key>delay</key>
							<value>10</value>
						</entry>
						<entry>
							<key>polling</key>
							<value>1000</value>
						</entry>
						<entry>
							<key>positioner</key>
							<value>deco4mas.examples.mediated.tspaces.ExamplePositioner
							</value>
						</entry>
						<entry>
							<key>size:Y</key>
							<value>4</value>
						</entry>
						<entry>
							<key>size:X</key>
							<value>4</value>
						</entry>
						<entry>
							<key>expiration</key>
							<value>10000</value>
						</entry>
						<entry>
							<key>propagation</key>
							<value>3000</value>
						</entry>
						<entry>
							<key>TTL</key>
							<value>2</value>
						</entry>
					</properties>
				</mechanism_configuration>
				<to>		<!-- Behaviors / events to be triggered upon reception: -->
					<agent_element element="InformCounterIncrementStep" agent_id="Receiver" type="MICRO_STEP">
						<parameter_mappings>
							<mapping ref="counter" name="counter"/>
						</parameter_mappings>
					</agent_element>
				</to>
			</realization>
		</deco-link-realizations>
	</causalities>
</MASDynamic>