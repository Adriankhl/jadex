<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<MASDynamic name="belief_set">
	<!--
		Tuple Space Example: 2D Environment-Interaction Exemplifies how
		publications of Coordination Information can be triggered by changes
		of agent-goals. Activities in the Sender agent "Sender.agent.xml"
		modify the currently active goals of the agent. These modifications
		are observed by a Coordination Endpoint that publishes the changes of
		the agent state on a Coordination Medium. Here, a tuple-space is used
		to resemble interactions in a two-dimensional environment. An agent
		type (Sender.agent.xml) is publishing adoptions of goals. Agents on
		the same (virtual) position (ReceiverSameLocation.agent.xml) is
		receiving these publications while other agents
		(ReceiverDifferentLocation.agent.xml) are not affected.
	-->

	<!--
		System Properties: Definitions of the behaviors that agents can adopt
		and that makes them: - engage in coordinative activities - react to
		coordinative activities
	-->
	<system_properties>
		<role_occupations>
			<role_occupation name="sender" multiple="false">
				<agent id="Sender">
					<constraints>
						<condition name="condition_name">$beliefbase.conditionBelief
						</condition>
					</constraints>
					<elements>
						<element id="testEvent" type="INTERNAL_EVENT" />
					</elements>
				</agent>
			</role_occupation>
			<role_occupation name="receiver" multiple="false">		<!-- This behavior/role can be adopted bytwo agent types. -->
				<agent id="ReceiverDifferentLocation">
					<elements>
						<element id="counter" type="BDI_BELIEFSET" />
					</elements>
				</agent>
				<agent id="Receiver">
					<constraints>
						<condition name="condition_name">$beliefbase.conditionBelief
						</condition>
					</constraints>
					<elements>
						<element id="testGoal" type="BDI_GOAL" />
					</elements>
				</agent>
			</role_occupation>
		</role_occupations>
	</system_properties>


	<!--
		Causal links: Definition of the interdependencies between
		agent-behaviors.
	-->
	<causalities>
		<deco_links>
			<!-- The encated interdependency: -->
			<deco_link realization="by_tuple" type="POSITIVE" name="send-receive">
				<froms>
					<from>sender</from>
				</froms>
				<tos>
					<to>receiver</to>
				</tos>
			</deco_link>
		</deco_links>

		<!-- The detailed configuration of interdependency enactment. -->
		<deco-link-realizations>
			<realization id="by_tuple">
				<from>		<!-- Published behaviors / events: -->
					<agent_element element="testEvent" agent_id="Sender"
						type="INTERNAL_EVENT">
						<!--
							<parameter_mappings> <mapping ref="mappingValue"
							name="mappingName"/> </parameter_mappings>
						-->
					</agent_element>
				</from>
				<!-- Coordination Medium configuration: -->
				<mechanism_configuration
					mechanism_id="deco4mas.mechanism.mediated.tspaces.Mediated(TSpaces)"
					agent_type="JADEX">
					<properties>
						<entry>
							<key>delay</key>
							<value>10</value>
						</entry>
						<entry>
							<key>polling</key>
							<value>1000</value>
						</entry>
						<entry>
							<key>positioner</key>
							<value>deco4mas.examples.mediated.tspaces.ExamplePositioner
							</value>
						</entry>
						<entry>
							<key>size:Y</key>
							<value>4</value>
						</entry>
						<entry>
							<key>size:X</key>
							<value>4</value>
						</entry>
						<entry>
							<key>expiration</key>
							<value>10000</value>
						</entry>
						<entry>
							<key>propagation</key>
							<value>3000</value>
						</entry>
						<entry>
							<key>TTL</key>
							<value>2</value>
						</entry>
					</properties>
				</mechanism_configuration>
				<to>		<!-- Behaviors / events to be triggered upon reception: -->
					<agent_element element="counter" agent_id="ReceiverDifferentLocation"
						type="BDI_BELIEFSET">
						<parameter_mappings>
							<mapping ref="value" name="value" />
						</parameter_mappings>
					</agent_element>
					<agent_element element="testGoal" agent_id="Receiver"
						type="BDI_GOAL">
						<!--
							<parameter_mappings> <mapping ref="value" name="value"/>
							</parameter_mappings>
						-->
					</agent_element>
				</to>
			</realization>
		</deco-link-realizations>
	</causalities>
</MASDynamic>