<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<MASDynamic name="threshold_response">
	<!-- Causal links: -->
	<causalities>
		<direct_links>
			<direct_link rate="1.5" type="POSITIVE" name="request">
				<froms>
					<from>sender</from>
				</froms>
				<tos>
					<to>receiver</to>
				</tos>
			</direct_link>
		</direct_links>
		<deco_links>
			<deco_link realization="by-token" type="POSITIVE" name="send-receive">
				<froms>
					<from>sender</from>
				</froms>
				<tos>
					<to>receiver</to>
				</tos>
			</deco_link>
		</deco_links>
		<deco-link-realizations>
			<realization id="by-token">
				<from>
					<agent_element element="action" agent_id="Sender"
						type="INTERNAL_EVENT">
						<parameter_mappings>
							<mapping ref="value" name="value" class="clazz" />
						</parameter_mappings>
					</agent_element>
				</from>
				<mechanism_configuration mechanism_id="deco4mas.mechanism.token.generic.Token"
					agent_type="JADEX">
					<properties>
						<entry>
							<key>syncronized</key>
							<value>false</value>
						</entry>
						<entry>
							<key>distribution_type</key>
							<value>RANDOM</value>
						</entry>
					</properties>
				</mechanism_configuration>
				<to>
					<agent_element element="action_stimulus" agent_id="Receiver"
						type="INTERNAL_EVENT">
						<parameter_mappings>
							<mapping ref="value" name="parameter" />
						</parameter_mappings>
					</agent_element>
				</to>
			</realization>
		</deco-link-realizations>
	</causalities>
	<!-- System Properties: -->
	<system_properties>
		<role_occupations>
			<role_occupation name="sender" multiple="false">
				<agent id="Sender">
					<constraints>
						<condition name="condition_name">true</condition>   <!-- "$agent.getAgentName()" -->
						<inhibitions>
							<element id="action" type="INTERNAL_EVENT" />
						</inhibitions>
					</constraints>
					<elements>
						<element id="action" type="INTERNAL_EVENT" />
					</elements>
				</agent>
			</role_occupation>
			<role_occupation name="receiver" multiple="false">
				<agent id="Receiver">
					<elements>
						<element id="action" type="INTERNAL_EVENT" />
					</elements>
				</agent>
			</role_occupation>
		</role_occupations>
	</system_properties>
</MASDynamic>