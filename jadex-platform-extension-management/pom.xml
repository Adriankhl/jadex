<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>jadex-platform-extension-management</artifactId>
	<packaging>jar</packaging>
	<name>jadex-platform-extension-management</name>
	<parent>
		<groupId>net.sourceforge.jadex</groupId>
		<artifactId>jadex-parent-pro</artifactId>
		<version> 2.4-SNAPSHOT </version>
		<relativePath>../jadex-parent-pro/pom.xml</relativePath>
	</parent>

	<description>
		Services that allow spawning new platforms and updating running platforms to new versions.
	</description>

	<dependencies>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-commons</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-bridge</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-xml</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-micro</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-bpmn</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-rules-eca</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
		    <groupId>commons-daemon</groupId>
		    <artifactId>commons-daemon</artifactId>
		    <version>1.0.10</version><!-- todo: update to 1.0.11 when available for compatibility with binary executables -->
		</dependency>
		<dependency>
			<groupId>javassist</groupId>
			<artifactId>javassist</artifactId>
			<version>3.12.1.GA</version>
		</dependency>
	</dependencies>


	<!-- Set scopes of standard jadex jars to provided for excluding them from dist -->
	<profiles>
		<profile>
			<id>dist</id>
			<dependencies>
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-commons</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-bridge</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-xml</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-micro</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-bpmn</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-rules-eca</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

</project>
