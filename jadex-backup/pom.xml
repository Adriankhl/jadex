<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>jadex-backup</artifactId>
	<packaging>jar</packaging>
	<name>jadex-backup</name>
	<parent>
		<groupId>net.sourceforge.jadex</groupId>
		<artifactId>jadex-parent-pro</artifactId>
		<version> 2.3-SNAPSHOT </version>
		<relativePath>../jadex-parent-pro/pom.xml</relativePath>
	</parent>

	<description>
		Decentralized backup solution based on distributed Jadex platforms.
	</description>

	<dependencies>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-commons</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-bridge</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-micro</artifactId>
			<version>${project.version}</version>
		</dependency>				
	</dependencies>


	<!-- Set scopes of standard jadex jars to provided for excluding them from dist -->
	<profiles>
		<profile>
			<id>dist</id>
			<dependencies>
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-commons</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-bridge</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-micro</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

</project>
