<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<MASDynamic name="delay_example">
	<!--
		Delay Example:
	-->

	<!--
		System Properties: Definitions of the behaviors that agents can adopt
		and that makes them: - engage in coordinative activities - react to
		coordinative activities
	-->
	<system_properties>
		<role_occupations>
			<role_occupation name="counter" multiple="false">
				<agent id="Counter"/>
			</role_occupation>
			<role_occupation name="printer" multiple="false">
				<agent id="Counter"/>
			</role_occupation>
		</role_occupations>
	</system_properties>


	<!--
		Causal links: Definition of the interdependencies between
		agent-behaviors.
	-->
	<causalities>
		<deco_links>
			<deco_link realization="delay" type="POSITIVE" name="send" spaces="mycoordspace">
				<froms>
					<from>counter</from>
				</froms>
				<tos>
					<to>printer</to>
				</tos>
			</deco_link>
		</deco_links>

		<deco-link-realizations>
			<realization id="delay">
				<from>		<!-- Published behaviors / events: -->
					<agent_element element="CountStep" agent_id="Counter" type="MICRO_STEP">
						<parameter_mappings>
							<mapping ref="counter" name="counter"/>
						</parameter_mappings>
					</agent_element>
				</from>
				<!-- Coordination Medium configuration: -->
				<mechanism_configuration
					mechanism_id="deco4mas.distributed.mechanism.service.DelayServiceMechanism"
					agent_type="JADEX">
					Â <properties>
						<entry>
							<key>timeout</key>
							<value>1000</value>
						</entry>
					</properties>
				</mechanism_configuration>
				<to>		<!-- Behaviors / events to be triggered upon reception: -->
					 <agent_element element="PrintStep" agent_id="Counter" type="MICRO_STEP">
						<parameter_mappings>
							<mapping ref="counter" name="counter"/>
						</parameter_mappings>
					</agent_element>
				</to>
			</realization>
		</deco-link-realizations>
	</causalities>
</MASDynamic>