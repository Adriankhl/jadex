<!--
	<H3>Heterogeneous agents example application for V2 Deco4MAS Distributed</H3>
	
	Heterogeneous agents example: This example shows how different agent types (micro and BDI) could be coordinated using the framework.
	The 'sayhello' goal in the example BDI agent is observed by the framework and the event is published over the coordination medium
	to the 'ReceiveHelloStep' CoordinationComponentStep in the example micro agent.
-->

<applicationtype xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:env="http://jadex.sourceforge.net/jadex-envspace"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-application 
	                    http://jadex.sourceforge.net/jadex-application-2.0.xsd	                    
	                    http://jadex.sourceforge.net/jadex-envspace 
	                    http://jadex.sourceforge.net/jadex-envspace-2.0.xsd"
	name="Heterogeneous" package="deco4mas.examples.heterogeneous.service">	

	<imports>
		<import>jadex.extension.envsupport.environment.space2d.*</import>
		<import>jadex.extension.envsupport.environment.*</import>
		<import>jadex.extension.envsupport.math.*</import>
		<import>jadex.extension.envsupport.dataview.*</import>
		<import>jadex.extension.envsupport.observer.perspective.*</import>
		<import>jadex.bdi.planlib.*</import>
		<import>jadex.bridge.service.*</import>
		<import>jadex.commons.future.*</import>
		<import>deco4mas.coordinate.interpreter.coordination_information.*</import>
		<import>deco4mas.coordinate.environment.*</import>
		<import>deco4mas.annotation.agent.*</import>
		<import>deco4mas.coordinate.*</import>
		<import>deco4mas.examples.heterogeneous.*</import>
	</imports>	

			
	<extensiontypes>
		<env:envspacetype name="coordspace" width="11" height="11" class="CoordinationSpace">		
			<env:property name="dynamics_configuration">"sodekovs-coordination-distributed/src/main/java/deco4mas/examples/heterogeneous/service/coordination.dynamics.xml"</env:property>

			<env:spaceexecutor class="DeltaTimeExecutor">
				<env:property name="space">$space</env:property>
				<env:property name="tick">true</env:property>
			</env:spaceexecutor>
		</env:envspacetype>
	</extensiontypes>
	
	<componenttypes>
		<componenttype name="ExampleMicro" filename="deco4mas/examples/heterogeneous/service/ExampleMicroAgent.class" />
		<componenttype name="ExampleBDI" filename="deco4mas/examples/heterogeneous/service/ExampleBDI.agent.xml" />		
	</componenttypes>


	<applications>
	
	<application name="Heterogeneous">
			<extensions>	
				<env:envspace name="mycoordspace" type="coordspace" width="2" height ="2" />
			</extensions>
			<components>
				<component type="ExampleMicro" number="1"/>
  				<component type="ExampleBDI" number="1"/>				
			</components>
 		</application>
	</applications>
	
</applicationtype>