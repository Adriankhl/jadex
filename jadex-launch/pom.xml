<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>jadex</groupId>
  <artifactId>jadex-launch</artifactId>
  <packaging>jar</packaging>
  <version>2.0-beta4</version>
  <name>jadex-launch</name>
  <!-- <url>http://jadex.sourceforge.net</url> -->
  <parent>
    <groupId>jadex</groupId>
    <artifactId>jadex-settings</artifactId>
    <version>2.0-beta4</version>
    <relativePath>../src/main/config/jadex-settings-pom.xml</relativePath>
  </parent>
  <build>
    <plugins>
     <!-- Make jar executable (cannot do this in standalone, because maven claims cyclic reference) -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>jadex.adapter.standalone.Platform</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      
      <!-- 
      	copy all dependencies (including transitive dependencies) to 
      	lib directory, ease starting jadex without eclipse 
      -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
               <outputDirectory>${project.build.directory}/lib</outputDirectory>
               <overWriteReleases>true</overWriteReleases>
               <overWriteSnapshots>true</overWriteSnapshots>
            </configuration>
          </execution>
        </executions>
      </plugin>
      
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>jadex</groupId>
    	<artifactId>jadex-standalone</artifactId>
    	<version>2.0-beta4</version>
    </dependency>
    <dependency>
    	<groupId>jadex</groupId>
    	<artifactId>jadex-runtimetools</artifactId>
    	<version>2.0-beta4</version>
    </dependency>
    <dependency>
    	<groupId>jadex</groupId>
    	<artifactId>jadex-kernel-micro</artifactId>
    	<version>2.0-beta4</version>
    </dependency>
    <dependency>
    	<groupId>jadex</groupId>
    	<artifactId>jadex-rules-tools</artifactId>
    	<version>2.0-beta4</version>
    </dependency>
  </dependencies>
</project>
