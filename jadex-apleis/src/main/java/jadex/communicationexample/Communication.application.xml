<!--
	<H3>The communication example</H3>

	It can be used to launch the communication environment interface standard example.
-->

<applicationtype xmlns="http://jadex.sourceforge.net/jadex-application"
	xmlns:eis="http://jadex.sourceforge.net/jadex-eisspace"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-application 
	                    http://jadex.sourceforge.net/jadex-application-2.0.xsd
	                    http://jadex.sourceforge.net/jadex-eisspace 
	                    http://jadex.sourceforge.net/jadex-eisspace-1.0.xsd"
	name="Communication" package="jadex.communicationexample">
	
	<spacetypes>
		<eis:eisspacetype name="env" class="communicationexample.EnvironmentInterface"></eis:eisspacetype>
	</spacetypes>
	
	<componenttypes>
		<componenttype name="CommunicationAgent" filename="jadex/communicationexample/CommunicationAgent.class"/>
	</componenttypes>
	
	<applications>
		<application name="communication">
			<spaces>
				<eis:eisspace name="myenv" type="env"></eis:eisspace>
			</spaces>

			<components>
				<agent type="CommunicationAgent" name="ag1">
					<arguments>
						<argument name="tell">"hi"</argument>
					</arguments>
				</agent>
				<agent type="CommunicationAgent" name="ag2">
					<arguments>
						<argument name="tell">"hello"</argument>
					</arguments>
				</agent>
				<agent type="CommunicationAgent" name="ag3">
					<arguments>
						<argument name="tell">"bonjour"</argument>
					</arguments>
				</agent>
			</components>
		</application>
	</applications>

</applicationtype>
