<?xml version="1.0" encoding="UTF-8"?>
<!--
  Micro kernel component.
-->
<componenttype xmlns="http://jadex.sourceforge.net/jadex-component"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-component
						http://jadex.sourceforge.net/jadex-component-2.0.xsd"
	name="kernel_micro" package="jadex.micro">
	
	<imports>
		<import>jadex.commons.*</import>
		<import>jadex.bridge.*</import>
	</imports>
	
	<properties>
		<property name="kernel_type_extensions" class="String[]">
			new String[] {"Agent.class"}
		</property>
	</properties>
	
	<services>
		<providedservice class="IComponentFactory">
			<implementation proxytype="raw">
				new MicroAgentFactory($component.getServiceProvider(), SUtil.createHashMap(
					new String[]
					{
						"debugger.panels"
					},
					new Object[]
					{
						"jadex.tools.debugger.micro.MicroDebuggerPanel"
					})
				)
			</implementation>
		</providedservice>
	</services>
</componenttype>