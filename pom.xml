		        </configuration>
		        <executions>
		        	<execution>
		        		<id>make-assembly</id>
		        		<phase>package</phase>
		        		<goals>
		        			<goal>single</goal>
		        		</goals>
		        	</execution>
		        </executions>
		      </plugin>
		    </plugins>
  		</build>
		<modules>
		    <module>jadex-commons</module>
		    <module>jadex-xml</module>
		    <module>jadex-rules</module>
		    <module>jadex-rules-applications</module>
