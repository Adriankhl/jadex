				<module>jadex-parent</module>
				<module>jadex-commons</module>
				<module>jadex-xml</module>
			</modules>
		</profile>

		<profile>
			<id>jadex-xml-dist</id>
			<build>
				<finalName>jadex-xml-${project.version}</finalName>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						<version>2.2.1</version>
						<executions>
							<execution>
								<id>make-assembly</id>
								<phase>package</phase>
								<goals>
									<goal>single</goal>
								</goals>
								<configuration>
									<descriptors>
										<descriptor>src/main/assembly/dist-assembly-xml.xml</descriptor>
									</descriptors>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>wagon-maven-plugin</artifactId>
						<version>1.0-beta-3</version>
						<executions>
							<execution>
								<id>xml-guide</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>download-single</goal>
								</goals>
								<configuration>
									<url>http://jadex-xml.informatik.uni-hamburg.de/xwiki/bin/view/Links+to+PDFs</url>
									<fromFile>User+Guide</fromFile>
									<toFile>${basedir}/target/xml_guide.pdf</toFile>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
			<modules>
				<module>jadex-parent</module>
				<module>jadex-commons</module>
				<module>jadex-xml</module>
			</modules>
		</profile>

