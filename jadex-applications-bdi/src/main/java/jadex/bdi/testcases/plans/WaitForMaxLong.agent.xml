<!--
	<H3>Test waiting for Long.MAX_VALUE msecs.</H3>

	The testcase checks whether the execution of a plan waiting for a very long time
	(Long.MAX_VALUE) disturbs other plans waiting for an amount of time.

-->
<agent xmlns="http://jadex.sourceforge.net/jadex-bdi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	name="WaitForMaxLong"
	package="jadex.bdi.testcases.plans">

	<imports>
		<import>jadex.adapter.base.test.*</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.bdi.planlib.test.Test"/>
	</capabilities>

	<beliefs>
		<beliefref name="timeout"  exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testresults"  result="true">
			<concrete ref="testcap.testresults"/>
		</beliefref>
		<belief name="cnt" class="int">
			<fact>0</fact>
		</belief>
	</beliefs>

	<plans>
		<plan name="starter">
			<body class="WaitForMaxLongPlan"/>
		</plan>
	</plans>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcap.testcase_cnt">
					<fact>2</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="starter"/>
				<initialplan ref="starter"/>
				<initialplan ref="starter"/>
			</plans>
		</configuration>
	</configurations>

</agent>
