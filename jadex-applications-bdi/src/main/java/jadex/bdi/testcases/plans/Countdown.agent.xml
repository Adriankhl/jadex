<!--
	<H3>Test a plan's context condition.</H3>

	Countdown Agent; tests the context condition of a plan.
	Has an initial plan that counts down to zero and
	uses a context condition to stop counting.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-2.0.xsd"
	name="Countdown"
	package="jadex.bdi.testcases.plans">

	<imports>
		<import>jadex.bdi.planlib.test.TestReport</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.bdi.planlib.test.Test"/>
	</capabilities>

	<beliefs>
		<beliefsetref name="reports" >
			<concrete ref="testcap.reports"/>
		</beliefsetref>
		<beliefref name="timeout"  exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter"  exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>

		<belief name="num"  class="int">
			<fact>3</fact>
		</belief>
	</beliefs>

	<plans>
		<plan name="countdown">
			<body class="CountdownPlan"/>
			<contextcondition>
				// $beliefbase.num&gt;0
				?rbelief = (belief (element_has_model ?mbelief) (belief_has_fact > 0))
				?mbelief = (mbelief (element_has_name "num"))
 			</contextcondition>
		</plan>
		<plan name="tester">
			<body class="CountdownTesterPlan"/>
		</plan>
	</plans>


	<properties>
        <!--<property name="debugging">true</property>-->
        <!--<property name="logging.level">java.util.logging.Level.INFO</property>-->
        <property name="logging.useParentHandlers">true</property>
    </properties>


	<configurations>
		<configuration name="default">
			<plans>
				<initialplan ref="countdown"/>
				<initialplan ref="tester"/>
			</plans>
		</configuration>
	</configurations>

</agent>

