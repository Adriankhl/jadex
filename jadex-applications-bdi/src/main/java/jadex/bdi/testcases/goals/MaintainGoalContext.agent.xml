<!--
	<H3>Test maintain goal suspension.</H3>

	The test plan creates a maintain goal and suspends it
	while it is in process.
	Then the goal is reactivated to see if it will continue to work.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-2.0.xsd"
	name="MaintainGoalContext"
	package="jadex.bdi.testcases.goals">

	<imports>
		<import>jadex.bdi.testcases.*</import>
		<import>java.util.logging.Level</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.bdi.planlib.test.Test"/>
	</capabilities>

	<beliefs>
		<beliefref name="timeout"  exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter"  exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
		<belief name="count" class="int">
			<fact>0</fact>
		</belief>
		<belief name="context" class="boolean">
			<fact>true</fact>
		</belief>
	</beliefs>

	<goals>
		<maintaingoal name="maintain" exclude="never" retrydelay="100">
			<contextcondition>
 				// $beliefbase.context
 				
 				?rbel	= (belief (element_has_model ?mbel) (belief_has_fact true))
				?mbel	= (mbelief (melement_has_name "context"))
			</contextcondition>
			<maintaincondition>
 				// $beliefbase.count==5
 				
 				?rbel	= (belief (element_has_model ?mbel) (belief_has_fact 5))
				?mbel	= (mbelief (melement_has_name "count"))
			</maintaincondition>
		</maintaingoal>
	</goals>

	<plans>
		<plan name="test">
			<body class="MaintainTestPlan"/>
		</plan>
		
		<plan name="increment">
			<parameter name="beliefname">
				<value>"count"</value>
			</parameter>
			<body class="BeliefIncrementPlan"/>
			<trigger>
				<goal ref="maintain"/>
			</trigger>
		</plan>
	</plans>
	
	<properties>
		<!-- <property name="logging.level">Level.INFO</property> -->
		<property name="debugging">false</property>
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcap.testcase_cnt">
					<fact>4</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="test"/>
			</plans>
		</configuration>
	</configurations>

</agent>
