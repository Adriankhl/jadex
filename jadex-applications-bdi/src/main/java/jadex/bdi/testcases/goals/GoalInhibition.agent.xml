<!--
	<H3>Test goal inhibition.</H3>
	
	The "docnt" perform goal increments the "count" belief,
	unless the "lowerbound" maintaingoal is active, which ensures that "count"
	stays below 4.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-2.0.xsd"
	name="GoalInhibition"
	package="jadex.bdi.testcases.goals">

	<imports>
		<import>jadex.bdi.testcases.*</import>
		<import>java.util.logging.Level</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.bdi.planlib.test.Test"/>
	</capabilities>

	<beliefs>
		<beliefref name="timeout"  exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testcenter"  exported="true">
			<concrete ref="testcap.testcenter"/>
		</beliefref>
		<belief name="count"  class="int">
			<fact>0</fact>
		</belief>
	</beliefs>

	<goals>
		<performgoal name="docnt" retry="true" retrydelay="100" exclude="never"/>
		<maintaingoal name="lowerbounds">
			<deliberation>
				<inhibits ref="docnt" inhibit="when_in_process"/>
			</deliberation>
			<maintaincondition language="jcl">
				$beliefbase.count&lt;4

				// ?rbel	= (belief (element_has_model ?mbel) (belief_has_fact &lt; 4))
				// ?mbel	= (mbelief (melement_has_name "count"))
			</maintaincondition>
		</maintaingoal>
	</goals>

	<plans>
        <plan name="increment">
			<parameter name="beliefname">
				<value>"count"</value>
			</parameter>
			<parameter name="value">
				<value>3</value>
			</parameter>
			<body class="BeliefIncrementPlan"/>
			<trigger>
				<goal ref="docnt"/>
			</trigger>
		</plan>
		
		 <plan name="decrement">
			<parameter name="beliefname">
				<value>"count"</value>
			</parameter>
			<parameter name="value">
				<value>-1</value>
			</parameter>
			<parameter name="rate">
				<value>100</value>
			</parameter>
			<body class="BeliefIncrementPlan"/>
			<trigger>
				<goal ref="lowerbounds"/>
			</trigger>
		</plan>
		
		<plan name="testplan">
			<body class="GoalInhibitionPlan"/>
		</plan>
	</plans>
	
	<expressions>
		<condition name="countis5" language="jcl">
			$beliefbase.count==5
			
			// ?rbel	= (belief (element_has_model ?mbel) (belief_has_fact 5))
			// ?mbel	= (mbelief (melement_has_name "count"))
		</condition>
		<condition name="countis6" language="jcl">
			$beliefbase.count==6
			
			// ?rbel	= (belief (element_has_model ?mbel) (belief_has_fact 6))
			// ?mbel	= (mbelief (melement_has_name "count"))
		</condition>
	</expressions>
	
	<properties>
		<property name="debugging">false</property>
		<!-- <property name="logging.level">Level.INFO</property> -->
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcap.testcase_cnt">
					<fact>3</fact>
				</initialbelief>
			</beliefs>
			<goals>
				<initialgoal ref="docnt"/>
				<initialgoal ref="lowerbounds"/>
			</goals>
			<plans>
				<initialplan ref="testplan"/>
			</plans>
		</configuration>
	</configurations>

</agent>

