<!--
	<H3>Watchdog Test.</H3>
-->

<agent xmlns="http://jadex.sourceforge.net/jadex-bdi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	name="WatchdogTest"
	package="jadex.bdi.testcases.misc">

	<imports>
		<import>java.util.logging.*</import>
		<import>jadex.adapter.base.fipa.*</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.bdi.planlib.test.Test"/>
		<capability name="dogcap" file="jadex.bdi.planlib.watchdog.Watchdog"/>
	</capabilities>

	<beliefs>
		<beliefref name="timeout"  exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testresults" result="true">
			<concrete ref="testcap.testresults"/>
		</beliefref>
		
		<beliefref name="emailaccount"   exported="true">
			<concrete ref="dogcap.emailaccount"/>
		</beliefref>
	</beliefs>

	<plans>
		<plan name="tester">
			<body class="WatchdogTestPlan"/>
		</plan>
	</plans>

	<properties>
		<property name="debugging">false</property>
		<!-- <property name="logging.level">java.util.logging.Level.FINE</property> -->
		<!-- <property name="logging.useParentHandlers">true</property> -->
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="testcap.testcase_cnt">
					<fact>2</fact>
				</initialbelief>
			</beliefs>
			<plans>
				<initialplan ref="tester"/>
			</plans>
		</configuration>
	</configurations>
</agent>

