<!--
	<H3>Test the debugging property.</H3>

	Debug Flag Agent.
	This agent tests if the debug flag works.
	When this flag is set to true, the agent
	sets the agenda to step mode. Therefore
	it can be used to debug an agent right
	from its birth.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-2.0.xsd"
	name="DebugFlag"
	package="jadex.bdi.testcases.semiautomatic">

	<plans>
		<plan name="eventthrower">
			<body class="EventThrowerPlan"/>
		</plan>
	</plans>

	 <properties>
 		<!-- With this flag the debugging can be turned on -->
		<property name="debugging">true</property>
    </properties>

	<configurations>
		<configuration name="default">
			<plans>
				<initialplan ref="eventthrower"/>
			</plans>
		</configuration>
	</configurations>

</agent>

