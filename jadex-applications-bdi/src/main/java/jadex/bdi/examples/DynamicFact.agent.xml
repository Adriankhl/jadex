<!--
	<H3>The dynamic fact agent has a dynamic fact.</H3>

	Returns the current time when belief is accessed.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-2.0.xsd"
	name="DynamicFact"
	package="jadex.bdi.examples">

	<beliefs>
		<beliefset name="times" class="long" evaluationmode="pull">
			<facts>new Long[]{new Long($scope.getTime()), new Long($scope.getTime())}</facts>
		</beliefset>
		
		<belief name="time" class="long" evaluationmode="pull">
			<fact>$scope.getTime()</fact>
		</belief>
	</beliefs>

	<plans>
		<plan name="printer">
			<body class="PrintPlan"/>
		</plan>
	</plans>

	<properties>
		<!--<property name="logging.level">Level.FINE</property>-->
		<!-- <property name="debugging">true</property>  -->
	</properties>

	<configurations>
		<configuration name="default">
			<plans>
				<initialplan ref="printer"></initialplan>
			</plans>
		</configuration>
	</configurations>

</agent>

