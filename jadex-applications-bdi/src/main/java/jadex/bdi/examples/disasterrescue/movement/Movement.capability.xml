<?xml version="1.0" encoding="UTF-8"?>
<!--
	The movement capability supplies the agents with basic
	goals, plans and beliefs for moving around.
-->
<capability xmlns="http://jadex.sourceforge.net/jadex-bdi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	name="Movement"
	package="jadex.bdi.examples.disasterrescue.movement">

	<imports>
		<import>jadex.application.runtime.*</import>
		<import>jadex.application.space.envsupport.environment.*</import>
		<import>jadex.application.space.envsupport.environment.space2d.*</import>
		<import>jadex.application.space.envsupport.math.*</import>
	</imports>

	<beliefs>
		<!-- Environment. -->
		<belief name="environment" class="ContinuousSpace2D">
 			<fact>(ContinuousSpace2D)((IApplicationExternalAccess)$scope.getParent()).getSpace("my2dspace")</fact>
 		</belief>
 		
 		<!-- Myself. -->
 		<belief name="myself" class="ISpaceObject" exported="true">
 			<fact>$beliefbase.environment.getAvatar($scope.getComponentIdentifier(), $scope.getAgentModel().getFullName())</fact>
 		</belief>
 		
 		<belief name="position" class="IVector2" evaluationmode="push">
			<fact language="jcl">$beliefbase.myself.position</fact>
 		</belief>
 		
 		<!-- Home location. -->
 		<belief name="home" class="IVector2" exported="true">
 			<fact>(IVector2)$beliefbase.myself.getProperty(Space2D.PROPERTY_POSITION)</fact>
 		</belief>
	</beliefs>

	<goals>
		<!-- Move to a certain location. -->
		<achievegoal name="move" exported="true">
			<parameter name="destination" class="IVector2"/>
		</achievegoal>
		
		<achievegoal name="go_home">
			<unique/>
			<creationcondition>
				$goalbase.getGoals().length==0 &amp;&amp; 
				$beliefbase.environment.getDistance($beliefbase.home, $beliefbase.position).getAsDouble()&gt;0.001
			</creationcondition>
		</achievegoal>
	</goals>

	<plans>
		<!-- Go to a destination. -->
		<plan name="go_destination">
			<parameter name="destination" class="IVector2">
 				<goalmapping ref="move.destination"/>
			</parameter>
			<body class="MoveToLocationPlan"/>
			<trigger>
				<goal ref="move"/>
			</trigger>
		</plan>
		
		<!-- Go to a destination. -->
		<plan name="go_home">
			<parameter name="destination" class="IVector2">
 				<value>$beliefbase.home</value>
			</parameter>
			<body class="MoveToLocationPlan"/>
			<trigger>
				<goal ref="go_home"/>
			</trigger>
		</plan>
	</plans>
</capability>
