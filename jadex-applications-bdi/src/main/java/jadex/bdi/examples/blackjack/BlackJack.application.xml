<!--
	BlackJack application descriptor.
-->

<applicationtype xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-appdescriptor 
	                    http://jadex.sourceforge.net/jadex-appdescriptor.xsd"
	name="BlackJack" package="jadex.bdi.examples.blackjack">
	
	<agenttypes>
		<agenttype name="Manager" filename="jadex/bdi/examples/blackjack/manager/Manager.agent.xml"/>
		<agenttype name="Dealer" filename="jadex/bdi/examples/blackjack/dealer/Dealer.agent.xml"/>
		<agenttype name="Player" filename="jadex/bdi/examples/blackjack/player/Player.agent.xml"/>
	</agenttypes>
	
	<applications>
		<application name="Only Manager">
			<agents>
				<agent type="Manager" master="true"/>
			</agents>
		</application>
	</applications>

</applicationtype>
