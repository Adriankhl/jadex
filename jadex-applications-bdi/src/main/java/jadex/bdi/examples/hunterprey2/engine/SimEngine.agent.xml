<!--
	<H3>Simulation Engine - Agent</H3>
	<p>
	Separate the SimEngine in an own agent/thread to avoid deadlocks.<br>
	This Agent is started via the Environment-Agent, you don't have to start it manually
	</p>
-->
<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-2.0.xsd"
	name="SimEnvironment"
	package="jadex.bdi.examples.hunterprey2.engine">

	<imports>
		<import>jadex.bdi.planlib.simsupport.common.math.IVector1</import>
		<import>jadex.bdi.planlib.simsupport.common.math.Vector1Int</import>
	</imports>
	
	<capabilities>
    	<capability name="envcap" file="jadex.bdi.planlib.simsupport.environment.capability.SimEnvironment"/>
	</capabilities>

	<beliefs>

		<!-- Name of the simulation environment -->
		<beliefref name="environment_name">
			<concrete ref="envcap.environment_name"/>
		</beliefref>
		
		<!-- The clock service -->
		<beliefref name="clock_service">
			<concrete ref="envcap.clock_service"/>
		</beliefref>
		
		<!-- The simulation engine -->
		<beliefref name="simulation_engine">
			<concrete ref="envcap.simulation_engine"/>
		</beliefref>

	</beliefs>

	<goals>
		<!-- sim environment start goal -->
		<achievegoalref name="sim_start_environment">
        	<concrete ref="envcap.sim_start_environment"/>
    	</achievegoalref>
	</goals>

	<plans>
    	<plan name="start_simengine">
      		<body class="SimEnginePlan"/>
    	</plan>
	</plans>

	<configurations>
		<configuration name="default">
			<plans>
				<initialplan ref="start_simengine"/>
			</plans>
		</configuration>
	</configurations>

</agent>

