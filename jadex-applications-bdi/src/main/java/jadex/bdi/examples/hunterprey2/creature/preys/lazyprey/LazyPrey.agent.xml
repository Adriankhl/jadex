<!--
	<H3>The lazy prey.</H3>

	The lazy prey does only move when chased by a wolf.
	Otherwise it sits and waits.
-->
<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-2.0.xsd"
	name="LazyPrey"
	package="jadex.bdi.examples.hunterprey2.creature.preys.lazyprey">

	<imports>
		<import>jadex.runtime.*</import>
		<import>jadex.bdi.examples.hunterprey2.*</import>
	</imports>

	
	<capabilities>
		<capability name="basiccap" file="jadex.bdi.examples.hunterprey2.creature.preys.basicbehaviour.BasicBehaviour"/>
	</capabilities>
	
	<beliefs>
		<!-- The creature -->
		<beliefref name="my_self">
			<concrete ref="basiccap.my_self"/>
		</beliefref>
	</beliefs>

	<properties>
		<!--<property name="logging.level">Level.FINE</property>-->
		<property name="debugging">false</property>
	</properties>

	<configurations>
		<configuration name="default">
			<capabilities>
				<initialcapability ref="basiccap" configuration="flee"/>
			</capabilities>
			<beliefs>
				<initialbelief ref="my_self">
					<fact>new Prey($scope.getAgentName(), $scope.getAgentIdentifier(), new Location(10,10))</fact>
				</initialbelief>
			</beliefs>
		</configuration>
	</configurations>

</agent>