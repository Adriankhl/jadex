<!--
	<H3>The HelloWorldGoal agent.</H3>

	It has a perform goal to print out a welcome message.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-2.0.xsd"
	name="HelloWorldGoal"
	package="jadex.bdi.examples">
	
	<goals>
		<performgoal name="hello">
			<parameter name="msg" class="String"/>
		</performgoal>
	</goals>
	
	<plans>
		<!-- Plan which prints out a message. -->
		<plan name="hello">
			<parameter name="msg" class="String">
				<goalmapping ref="hello.msg"/>
			</parameter>
			<body class="Hello2Plan"/>
			<trigger>
				<goal ref="hello"/>
			</trigger>
		</plan>
		<!-- Plan which prints out another message. -->
		<plan name="hello2">
			<parameter name="msg" class="String">
				<value>"And now for something completely different..."</value>
			</parameter>
			<body class="Hello2Plan"/>
			<trigger>
				<goal ref="hello"/>
			</trigger>
		</plan>
	</plans>

	<properties>
		<!-- <property name="debugging">true</property> -->
	</properties>
	
	<configurations default="default">
		<configuration name="default">
			<goals>
				<!-- Create hello goal when agent is born. -->
				<initialgoal ref="hello">
					<parameter ref="msg">
						<value>"Hello World!"</value>
					</parameter>
				</initialgoal>
			</goals>
		</configuration>
	</configurations>

</agent>
