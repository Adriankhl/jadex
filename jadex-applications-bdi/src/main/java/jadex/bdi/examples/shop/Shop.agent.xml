<?xml version="1.0" encoding="UTF-8"?>
<!--
	<H3>Shop agent that sells goods.</H3>
-->
<agent xmlns="http://jadex.sourceforge.net/jadex-bdi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	name="Shop"
	package="jadex.bdi.examples.shop">

	<imports>
		<import>jadex.base.fipa.*</import>
	</imports>

	<capabilities>
		<capability name="dfcap" file="jadex.bdi.planlib.df.DF"/>
	</capabilities>

	<goals>
		<achievegoal name="sell">
			<parameter name="name" class="String"></parameter>
			<parameter name="result" class="Object" direction="out"></parameter>
		</achievegoal>
		
		<achievegoalref name="df_register">
			<concrete ref="dfcap.df_register"/>
		</achievegoalref>
		
		<achievegoalref name="df_deregister">
			<concrete ref="dfcap.df_deregister"/>
		</achievegoalref>
	</goals>

	<plans>
		<plan name="sellplan">
			<parameter name="name" class="String">
				<goalmapping ref="sell.name"/>
			</parameter>
			<parameter name="result" class="Object" direction="out">
				<goalmapping ref="sell.result"/>
			</parameter>
			<body class="SellItemPlan"></body>
			<trigger>
				<goal ref="sell"></goal>
			</trigger>
		</plan>
	</plans>
	
	<services>
		<service name="shopservice" class="IShop">new Shop($scope.getExternalAccess())</service>
	</services>
	
	<configurations>
		<configuration name="buy">
			<goals>
				<initialgoal ref="df_register">
					<parameter ref="description">
						<value>
							((IDF)$scope.getServiceProvider().getService(IDF.class))
								.createDFComponentDescription(null, ((IDF)$scope.getServiceProvider().getService(IDF.class))
									.createDFServiceDescription(null, "shop", null))
						</value>
					</parameter>
				</initialgoal>
				<endgoal ref="df_deregister"/>
			</goals>
		</configuration>
	</configurations>
	
				

</agent>
