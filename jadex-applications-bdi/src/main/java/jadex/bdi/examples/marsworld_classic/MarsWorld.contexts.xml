<!--
	<H3>The marsworld application descriptor</H3>

	Can be used to launch the mars world example.<br>

	It consists of three different kinds of agents:<br>
	- <b>Sentry agents</b> are responsible for examining ore locations<br>
		A ore capacity is shown on the map when an ore location was examined.<br>
	- <b>Production agents</b> produce ore at available ore location.<br>
	- <b>Carry agents</b> are able to carry ore to the base.<br><br>

	Objective is to carry as much ore as possible to the<br>
	homebase in a predefined mission time.<br>
-->

<application xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-appdescriptor 
	                    http://jadex.sourceforge.net/jadex-appdescriptor.xsd"
	name="MarsWorld" package="jadex.bdi.examples.marsworld_classic">
	
	<contexttypes>
		<contexttype name="marsapplicationcontext" type="application">
			<app:agenttypes>
				<app:agenttype name="Environment" filename="jadex/bdi/examples/marsworld_classic/environment/Environment.agent.xml"/>
				<app:agenttype name="Carrier" filename="jadex/bdi/examples/marsworld_classic/carrier/Carry.agent.xml"/>
				<app:agenttype name="Producer" filename="jadex/bdi/examples/marsworld_classic/producer/Production.agent.xml"/>
				<app:agenttype name="Sentry" filename="jadex/bdi/examples/marsworld_classic/sentry/Sentry.agent.xml"/>
			</app:agenttypes>
		</contexttype>
	
		<contexttype name="marsagrcontext" type="agr">
			<agr:grouptype name="marsteam">
				<agr:roles>
					<agr:role name="sentry" min="1" max="n" />
					<agr:role name="producer" min="1" max="n" />
					<agr:role name="carrier" min="1" max="n" />
				</agr:roles>
			</agr:grouptype>
		</contexttype>
	</contexttypes>
	
	<configurations>
		<configuration name="1 Sentry / 2 Producers / 3 Carriers">
			<context type="marsagrcontext">
				<agr:group name="mymarsteam" type="marsteam"/>
			</context>
			<context type="marsapplicationcontext">
				<app:agents>
					<app:agent type="Environment"/>
					<app:agent type="Sentry">
						<agr:position role="sentry" group="mymarsteam"/> 
					</app:agent>
					<app:agent type="Producer" number="2">
						<agr:position role="producer" group="mymarsteam"/> 
					</app:agent>
					<app:agent type="Carrier" number="3">
						<agr:position role="carrier" group="mymarsteam"/> 
					</app:agent>
				</app:agents>
			</context>
		</configuration>
	</configurations>	

</application>
