<?xml version="1.0" encoding="UTF-8"?>
<!--
	<H3>The Environment Agent.</H3>
-->
<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-2.0.xsd"
	name="Environment"
	package="jadex.bdi.examples.cleanerworld2.environment">
	
	<imports>
		<import>jadex.bdi.planlib.simsupport.common.math.IVector1</import>
		<import>jadex.bdi.planlib.simsupport.common.math.Vector1Double</import>
	</imports>
	
	<capabilities>
    	<capability name="envcap" file="jadex.bdi.planlib.simsupport.environment.capability.SimEnvironment"/>
	</capabilities>
	
	<beliefs>
		<!-- Waste spawn rate (in wastes every x seconds) -->
		<belief name="waste_spawn_rate" class="IVector1" exported="true">
			<fact>new Vector1Double(10.0)</fact>
		</belief>
		
		<!-- Maximum number of waste objects -->
		<belief name="max_wastes" class="Integer" exported="true">
			<fact>new Integer(10)</fact>
		</belief>
		
		<!-- Number of waste bins -->
		<belief name="waste_bin_count" class="Integer" exported="true">
			<fact>new Integer(3)</fact>
		</belief>
		
		<!-- Number of charging stations -->
		<belief name="charging_station_count" class="Integer" exported="true">
			<fact>new Integer(3)</fact>
		</belief>
		
		<!-- Name of the simulation environment -->
		<beliefref name="environment_name">
			<concrete ref="envcap.environment_name"/>
		</beliefref>
		
		<!-- The clock service -->
		<beliefref name="clock_service">
			<concrete ref="envcap.clock_service"/>
		</beliefref>
		
		<!-- The simulation engine -->
		<beliefref name="simulation_engine">
			<concrete ref="envcap.simulation_engine"/>
		</beliefref>
  	</beliefs>
	
	<goals>
	    <achievegoalref name="sim_start_environment">
        	<concrete ref="envcap.sim_start_environment"/>
    	</achievegoalref>
  	</goals>
  	
  	<plans>
    	<!-- Initialization Plan. -->
    	<plan name="initialization">
      		<body class="InitializeEnvironmentPlan"/>
    	</plan>
    </plans>
    
  	<configurations>
    	<configuration name="default">
      		<plans>
        		<initialplan ref="initialization"/>
      		</plans>
    	</configuration>
  	</configurations>
</agent>