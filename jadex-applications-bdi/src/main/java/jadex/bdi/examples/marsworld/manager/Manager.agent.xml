<!--
	<H3>The manager agent.</H3>

	Can be used to launch the mars world example.<br>

	It consists of three different kinds of agents:<br>
	- <b>Sentry agents</b> are reponsible for examining orebodies<br>
		A ore capacity is shown on the map when an orebody was examined.<br>
	- <b>Production agents</b> produce ore at available orebodies.<br>
	- <b>Carry agents</b> are able to carry ore to the base.<br><br>

	Objective is to carry as much ore as possible to the<br>
	homebase in a predefined misssion time.<br>
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-2.0.xsd"
	name="Manager"
	package="jadex.bdi.examples.marsworld.manager">

	<imports>
		<import>jadex.bdi.examples.marsworld.*</import>
		<import>jadex.*</import>
		<import>jadex.bdi.planlib.starter.*</import>
		<import>jadex.adapter.base.fipa.*</import>
	</imports>

	<capabilities>
		<!-- Include the StartAgents capability as startcap for starting agents. -->
		<capability name="startercap" file="jadex.bdi.planlib.starter.StartAgents"/>
		<!-- <capability name="amscap" file="jadex.bdi.planlib.ams.AMS"/> -->
	</capabilities>

	<beliefs>
		<!-- The environment as singleton object. -->
		<belief name="environment" class="Environment">
			<fact>Environment.createInstance($scope.getExternalAccess())</fact>
	  	</belief>

		<beliefset name="startedagents" class="jadex.bridge.IAgentIdentifier"/>
		
		<belief name="gui" class="jadex.bdi.planlib.GuiCreator">
			<fact>new jadex.bdi.planlib.GuiCreator(MarsworldGui.class, new Class[]{jadex.bdi.runtime.IExternalAccess.class}, 
				new Object[]{$scope.getExternalAccess()})</fact>
		</belief>
	</beliefs>

	<plans>
		<plan name="starter">
			<parameterset name="agentinfos" class="StartAgentInfo"/>
			<body class="StarterPlan"/>
		</plan>
	</plans>

