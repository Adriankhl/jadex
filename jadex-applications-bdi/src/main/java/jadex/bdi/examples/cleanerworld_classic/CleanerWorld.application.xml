<applicationtype xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-appdescriptor 
	                    http://jadex.sourceforge.net/jadex-appdescriptor.xsd"
	name="CleanerWorld" package="jadex.bdi.examples.cleanerworld">
	
	<!-- <structuringtypes>
		<structuringtype name="env_type" type="continuous_space"/>
	</structuringtypes> -->
	
	<agenttypes>
		<agenttype name="EnvironmentLocal" filename="jadex/bdi/examples/cleanerworld_classic/environment/EnvironmentLocal.agent.xml"/>
		<agenttype name="CleanerLocal" filename="jadex/bdi/examples/cleanerworld_classic/cleaner/CleanerLocal.agent.xml"/>
		<agenttype name="EnvironmentRemote" filename="jadex/bdi/examples/cleanerworld_classic/environment/Environment.agent.xml"/>
		<agenttype name="CleanerRemote" filename="jadex/bdi/examples/cleanerworld_classic/cleaner/Cleaner.agent.xml"/>
	</agenttypes>
	
	<applications>
		<application name="Two cleaners local">
			<!-- <structurings>
				<structuring name="env" type="env_type"/>
			</structurings> -->
			<agents>
				<agent type="EnvironmentLocal" master="true"/>
				<agent type="CleanerLocal" number="2"/>
			</agents>
		</application>
		<application name="One cleaner local">
			<!--  <structurings>
				<structuring name="env" type="env_type"/>
			</structurings>-->
			<agents>
				<agent type="EnvironmentLocal" master="true"/>
				<agent type="CleanerLocal"/>
			</agents>
		</application>
		<application name="Two cleaners remote">
			<!--  <structurings>
				<structuring name="env" type="env_type"/>
			</structurings>-->
			<agents>
				<agent type="EnvironmentRemote" master="true"/>
				<agent type="CleanerRemote" number="2"/>
			</agents>
		</application>
		<application name="One cleaner remote">
			<!--  <structurings>
				<structuring name="env" type="env_type"/>
			</structurings>-->
			<agents>
				<agent type="EnvironmentRemote" master="true"/>
				<agent type="CleanerRemote"/>
			</agents>
		</application>
	</applications>

</applicationtype>
