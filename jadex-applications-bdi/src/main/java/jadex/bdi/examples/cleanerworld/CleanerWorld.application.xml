<!--
	Test application descriptor.
-->

<applicationtype xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-appdescriptor 
	                    http://jadex.sourceforge.net/jadex-appdescriptor.xsd"
	name="CleanerWorld">
	
	<agenttypes>
		<agenttype name="EnvironmentLocal" filename="jadex/bdi/examples/cleanerworld/environment/EnvironmentLocal.agent.xml"/>
		<agenttype name="CleanerLocal" filename="jadex/bdi/examples/cleanerworld/cleaner/CleanerLocal.agent.xml"/>
		<agenttype name="EnvironmentRemote" filename="jadex/bdi/examples/cleanerworld/environment/Environment.agent.xml"/>
		<agenttype name="CleanerRemote" filename="jadex/bdi/examples/cleanerworld/cleaner/Cleaner.agent.xml"/>
	</agenttypes>
	
	<applications>
		<application name="Two cleaners local">
			<agents>
				<agent type="EnvironmentLocal" />
				<agent type="CleanerLocal" number="2"/>
			</agents>
		</application>
		<application name="One cleaner local">
			<agents>
				<agent type="EnvironmentLocal" />
				<agent type="CleanerLocal"/>
			</agents>
		</application>
		<application name="Two cleaners remote">
			<agents>
				<agent type="EnvironmentRemote" />
				<agent type="CleanerRemote" number="2"/>
			</agents>
		</application>
		<application name="One cleaner remote">
			<agents>
				<agent type="EnvironmentRemote" />
				<agent type="CleanerRemote"/>
			</agents>
		</application>
	</applications>

</applicationtype>
