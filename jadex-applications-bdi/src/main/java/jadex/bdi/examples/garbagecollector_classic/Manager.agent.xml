<!--
	<H3>The manager agent.</H3>

	It can be started to launch a garbage collector scenario.
	This example is inspired by the "robot" example
	of the Jason BDI agent engine.
-->

<agent xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-2.0.xsd"
	name="Manager"
	package="jadex.bdi.examples.garbagecollector_classic">
	
	<imports>
		<import>jadex.bdi.planlib.starter.StartAgentInfo</import>
	</imports>

	<capabilities>
		<capability name="startercap" file="jadex.bdi.planlib.starter.StartAgents"/>
		<capability name="amscap" file="jadex.bdi.planlib.ams.AMS"/>
	</capabilities>

	<goals>
<!-- 		<achievegoalref name="start_agents">
			<concrete ref="startcap.start_agents"/>
			<parametersetref name="agentinfos">
				<concrete ref="agentinfos"/>
			</parametersetref>
			<deliberation>
				<!- - Wait for all agents being started before destroying the manager. - ->
				<inhibits ref="ams_destroy_agent"/>
			</deliberation>
		</achievegoalref>-->
		<!-- Used to stop other agents. -->
	</goals>

	<configurations>
		<configuration name="Two Burners / Two Collectors">
			<goals>
				<initialgoal ref="startercap.start_agents">
					<parameterset ref="agentinfos">
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/Environment.agent.xml", "Environment_%n", 2000, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageBurner.agent.xml", "Burner_%n", 0, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageBurner.agent.xml", "Burner_%n", 0, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageCollector.agent.xml", "Collector_%n", 0, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageCollector.agent.xml", "Collector_%n", 0, null)</value>
					</parameterset>
				</initialgoal><!-- 
				<initialgoal ref="ams_destroy_agent">
					<parameter ref="agentidentifier">
						<value>$scope.getAgentIdentifier()</value>
					</parameter>
				</initialgoal> -->
			</goals>
		</configuration>
		<configuration name="One Burner / One Collector">
			<goals>
				<initialgoal ref="startercap.start_agents">
					<parameterset ref="agentinfos">
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/Environment.agent.xml", "Environment_%n", 2000, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageBurner.agent.xml", "Burner_%n", 0, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageCollector.agent.xml", "Collector_%n", 0, null)</value>
					</parameterset>
				</initialgoal> <!-- 
				<initialgoal ref="ams_destroy_agent">
					<parameter ref="agentidentifier">
						<value>$scope.getAgentIdentifier()</value>
					</parameter>
				</initialgoal> -->
			</goals>
		</configuration>
		<configuration name="Two Burners / Six Collectors">
			<goals>
				<initialgoal ref="startercap.start_agents">
					<parameterset ref="agentinfos">
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/Environment.agent.xml", "Environment_%n", 2000, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageBurner.agent.xml", "Burner_%n", 0, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageBurner.agent.xml", "Burner_%n", 0, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageCollector.agent.xml", "Collector_%n", 0, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageCollector.agent.xml", "Collector_%n", 0, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageCollector.agent.xml", "Collector_%n", 0, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageCollector.agent.xml", "Collector_%n", 0, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageCollector.agent.xml", "Collector_%n", 0, null)</value>
						<value>new StartAgentInfo("jadex/bdi/examples/garbagecollector_classic/GarbageCollector.agent.xml", "Collector_%n", 0, null)</value>
					</parameterset>
				</initialgoal><!-- 
				<initialgoal ref="ams_destroy_agent">
					<parameter ref="agentidentifier">
						<value>$scope.getAgentIdentifier()</value>
					</parameter>
				</initialgoal> -->
			</goals>
		</configuration>
	</configurations>
</agent>