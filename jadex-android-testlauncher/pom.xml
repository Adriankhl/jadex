<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>jadex-android-testlauncher</artifactId>
	<packaging>apk</packaging>
	<name>jadex-android-testlauncher</name>

	<parent>
		<groupId>net.sourceforge.jadex</groupId>
		<artifactId>jadex-android-parent</artifactId>
		<version>2.4-SNAPSHOT</version>
		<relativePath>../jadex-android-parent/pom.xml</relativePath>
	</parent>

	<description>
	
	</description>

	<dependencies>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-android-platformapp</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-applications-micro</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-tools-base-swing</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-extension-envsupport</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-applications-bdiv3</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-tools-base-swing</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-extension-envsupport</artifactId>
				</exclusion>
				<exclusion>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-extension-agr</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.toedter</groupId>
					<artifactId>jcalendar</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.kohsuke</groupId>
					<artifactId>asm4</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<version>2.2.1</version>
			<scope>provided</scope>
		</dependency>

	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<excludes>
					<exclude>**/.svn/*</exclude>
				</excludes>
				<includes>
					<include>**/*.xml</include>
					<include>**/*.bpmn</include>
				</includes>
			</resource>
		</resources>

		<plugins>
		
		<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>groovy-maven-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<source>
								<![CDATA[
								println "Copying tests ..."
								def dir = "${project.basedir}"
								def ln = System.getProperty('line.separator')

								def path = dir + "/../jadex-platform-standalone-launch/src/test/java/"
								def f = new File(path);
								print "checking " + path + "... ";

								def target = new File(dir + "/target/generated-sources/tests/");
								if (!target.exists()) {
									target.mkdirs()
								}
 								if (f.exists() && f.isDirectory()) { 
 									new AntBuilder().copy(todir: target.path) {
 									    fileset(dir: f.path) {
 									    	exclude(name:"**/JCCTest.java")
 									    }
									}
									println "done.";
 								} else {
									println "no directory";
 								}
								]]>
							</source>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
<!-- 				<version>1.8</version> -->
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>target/generated-sources/tests</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		
			<plugin>
				<groupId>com.jayway.maven.plugins.android.generation2</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<extensions>true</extensions>
				<!-- <configuration> -->
				<!-- <generateApk>true</generateApk> -->
				<!-- <skip>true</skip> -->
				<!-- </configuration> -->
				<!-- <executions> -->
				<!-- <execution> -->
				<!-- <id>dex</id> -->
				<!-- <goals> -->
				<!-- <goal>dex</goal> -->
				<!-- </goals> -->
				<!-- </execution> -->
				<!-- <execution> -->
				<!-- <id>apk</id> -->
				<!-- <goals> -->
				<!-- <goal>apk</goal> -->
				<!-- </goals> -->
				<!-- </execution> -->
				<!-- </executions> -->
			</plugin>

			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>net.sourceforge.jadex</groupId>
				<artifactId>jadex-android-maven-plugin</artifactId>
				<configuration>
					<enhanceDependencies>true</enhanceDependencies>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>generateBDI</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.codehaus.mojo
										</groupId>
										<artifactId>
											groovy-maven-plugin
										</artifactId>
										<versionRange>
											[1.4,)
										</versionRange>
										<goals>
											<goal>execute</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											net.sourceforge.jadex
										</groupId>
										<artifactId>
											jadex-android-maven-plugin
										</artifactId>
										<versionRange>
											[1.0-SNAPSHOT,)
										</versionRange>
										<goals>
											<goal>generateBDI</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
