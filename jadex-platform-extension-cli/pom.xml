<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>jadex-platform-extension-cli</artifactId>
	<packaging>jar</packaging>
	<name>jadex-platform-extension-cli</name>
	<parent>
		<groupId>net.sourceforge.jadex</groupId>
		<artifactId>jadex-parent-pro</artifactId>
		<version>2.2</version>
		<relativePath>../jadex-parent-pro/pom.xml</relativePath>
	</parent>

	<description>
		The command line interface for the Jadex platform. 
	</description>

	<properties>
		<project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
		<wagon.version>2.2</wagon.version>
		<maven.version>3.0.3</maven.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-bridge</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-commons</artifactId>
			<version>${project.version}</version>
		</dependency>	
		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-micro</artifactId>
			<version>${project.version}</version>
		</dependency>       
	</dependencies>

	<!-- Set scopes of standard jadex jars to provided for excluding them from dist -->
	<profiles>
		<profile>
			<id>dist</id>
			<dependencies>
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-commons</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>            
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-bridge</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>  
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-micro</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>            
			</dependencies>
		</profile>
	</profiles>

</project>
