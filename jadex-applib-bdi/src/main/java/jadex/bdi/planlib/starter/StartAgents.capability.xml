<!--
	The start agents capability helps starting agents.
-->
<capability xmlns="http://jadex.sourceforge.net/jadex-bdi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	package="jadex.bdi.planlib.starter"
	name="StartAgents">

	<imports>
		<import>jadex.adapter.base.fipa.*</import>
		<import>jadex.bridge.IComponentIdentifier</import>
	</imports>
<!-- 
	<capabilities>
		<capability name="ams" file="jadex.bdi.planlib.ams.AMS"/>
	</capabilities>
 -->
	<goals>
		<achievegoal name="start_agents" exported="true">
			<parameterset name="agentinfos" class="StartAgentInfo"/>
			<parameterset name="agentidentifiers" class="IComponentIdentifier" direction="out"/>
		</achievegoal>
<!-- 
		<achievegoalref name="ams_create_agent">
			<concrete ref="ams.ams_create_agent"/>
		</achievegoalref>
 -->	</goals>

	<plans>
		<plan name="start_agents_plan">
			<parameterset name="agentinfos" class="StartAgentInfo">
				<goalmapping ref="start_agents.agentinfos"/>
			</parameterset>
			<parameterset name="agentidentifiers" class="IComponentIdentifier" direction="out">
				<goalmapping ref="start_agents.agentidentifiers"/>
			</parameterset>
			<body class="StartAgentsPlan" />
			<trigger>
				<goal ref="start_agents"/>
			</trigger>
		</plan>
	</plans>

</capability>
