<?xml version="1.0" encoding="UTF-8"?>
	<!--
		<H3>This application shows how the automated simulation management
		works.</H3>
	-->
<applicationtype xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
	                    http://jadex.sourceforge.net/jadex-application-2.0.xsd"
	name="InvestigationCenter" package="sodekovs.investigation.examples">

	
	<componenttypes>
		<componenttype name="InvestigationManager"
			filename="sodekovs/investigation/master/InvestigationManager.agent.xml" />
			<componenttype name="RemoteSimulationClient"
			filename="sodekovs/investigation/services/InvestigationClientService.agent.xml" />
	</componenttypes>
	
	<configurations>
		<configuration name="Simulate MarsWorld with RemoteClient">
			<components>
				<component type="InvestigationManager" master="true">
					<arguments>
						<argument name="investigationDescriptionFile">"../sodekovs-investigation-framework/src/main/java/sodekovs/investigation/examples/Configuration1.xml"</argument>
					</arguments>
				</component>
				<component type="RemoteSimulationClient" master="false"/>
			</components>
		</configuration>
	</configurations>
</applicationtype>
