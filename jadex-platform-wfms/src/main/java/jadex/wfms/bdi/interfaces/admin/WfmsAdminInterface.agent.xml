<!--
	<H3>WfMS Administration Interface Agent.</H3>
-->
<agent xmlns="http://jadex.sourceforge.net/jadex-bdi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	   name="WfmsAdminInterface"
	   package="jadex.wfms.bdi.interfaces.admin">

	<imports>
		<import>jadex.base.fipa.SFipa</import>
		<import>java.util.*</import>
		<import>jadex.base.fipa.*</import>
		<import>jadex.wfms.bdi.*</import>
		<import>jadex.wfms.client.IClient</import>
		<import>jadex.wfms.bdi.ontology.*</import>
		<import>jadex.commons.ThreadSuspendable</import>
		<import>jadex.commons.service.SServiceProvider</import>
	</imports>

	<capabilities>
		<capability name="dfcap" file="jadex.bdi.planlib.df.DF"/>
		<capability name="reqcap" file="jadex.bdi.planlib.protocols.request.Request"/>
		<capability name="subcap" file="jadex.bdi.planlib.protocols.subscribe.Subscribe"/>
	</capabilities>

	<beliefs>
		<!-- The filter for deciding which request messages are handled in this capability. -->
		<beliefref name="rp_filter">
			<concrete ref="reqcap.rp_filter"/>
		</beliefref>
	</beliefs>

	<goals>
		<querygoalref name="rp_decide_request">
			<concrete ref="reqcap.rp_decide_request"/>
		</querygoalref>
		<achievegoalref name="rp_execute_request">
			<concrete ref="reqcap.rp_execute_request"/>
		</achievegoalref>
		<achievegoalref name="rp_initiate">
			<concrete ref="reqcap.rp_initiate"/>
		</achievegoalref>
	</goals>

	<plans>
		<!-- Handle user activities requests. -->
		<plan name="request_user_activities_plan">
			<parameter name="action" class="Object">
				<goalmapping ref="rp_execute_request.action"/>
			</parameter>
			<!-- The requesting agent. -->
			<parameter name="initiator" class="jadex.bridge.IComponentIdentifier">
				<goalmapping ref="rp_execute_request.initiator"/>
			</parameter>
			<parameter name="result" class="Object" direction="out">
				<goalmapping ref="rp_execute_request.result"/>
			</parameter>
			<body class="RequestUserActivitiesPlan" />
			<trigger>
				<goal ref="rp_execute_request">
					<match>$goal.getParameter("action").getValue() instanceof RequestUserActivities</match>
				</goal>
			</trigger>
		</plan>
		
		<!-- Handle activity termination requests. -->
		<plan name="request_terminate_activity_plan">
			<parameter name="action" class="Object">
				<goalmapping ref="rp_execute_request.action"/>
			</parameter>
			<!-- The requesting agent. -->
			<parameter name="initiator" class="jadex.bridge.IComponentIdentifier">
				<goalmapping ref="rp_execute_request.initiator"/>
			</parameter>
			<parameter name="result" class="Object" direction="out">
				<goalmapping ref="rp_execute_request.result"/>
			</parameter>
			<body class="RequestTerminateActivityPlan" />
			<trigger>
				<goal ref="rp_execute_request">
					<match>$goal.getParameter("action").getValue() instanceof RequestTerminateActivity</match>
				</goal>
			</trigger>
		</plan>
		
		<!-- Handle activity event subscription requests. -->
		<plan name="start_user_activities_subscription_plan">
			<!-- The requesting agent. -->
			<parameter name="initiator" class="jadex.bridge.IComponentIdentifier">
				<goalmapping ref="sp_start_subscription.initiator"/>
			</parameter>
			<parameter name="subscription_id" class="Object">
				<goalmapping ref="sp_start_subscription.subscription_id"/>
			</parameter>
			<body class="StartUserActivitiesSubscriptionPlan" />
			<trigger>
				<goal ref="subcap.sp_start_subscription">
					<match>$goal.getParameter("subscription").getValue() instanceof SubscribeUserActivitiesEvents</match>
				</goal>
			</trigger>
		</plan>
		
		<!-- Handle process event subscription requests. -->
		<plan name="start_process_event_subscription_plan">
			<!-- The requesting agent. -->
			<parameter name="initiator" class="jadex.bridge.IComponentIdentifier">
				<goalmapping ref="sp_start_subscription.initiator"/>
			</parameter>
			<parameter name="subscription_id" class="Object">
				<goalmapping ref="sp_start_subscription.subscription_id"/>
			</parameter>
			<body class="StartProcessEventSubscriptionPlan" />
			<trigger>
				<goal ref="subcap.sp_start_subscription">
					<match>$goal.getParameter("subscription").getValue() instanceof SubscribeProcessEvents</match>
				</goal>
			</trigger>
		</plan>
	</plans>

	<events>
	</events>

	<expressions>
	</expressions>

	<properties>
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief ref="rp_filter">
					<fact>jadex.commons.IFilter.ALWAYS</fact>
				</initialbelief>
			</beliefs>
			<goals>
				<initialgoal ref="dfcap.df_keep_registered">
					<parameter ref="description">
						<value>
							((IDF)SServiceProvider.getService($scope.getServiceProvider(), IDF.class).get(new ThreadSuspendable()))
							.createDFComponentDescription(null, ((IDF)SServiceProvider.getService($scope.getServiceProvider(), IDF.class).get(new ThreadSuspendable()))
							.createDFServiceDescription(SWfms.SERVICE_NAME_ADMIN_INTERFACE, SWfms.SERVICE_TYPE_EXTERNAL, ""))
						</value>
					</parameter>
				</initialgoal>
			</goals>
		</configuration>
	</configurations>

</agent>

