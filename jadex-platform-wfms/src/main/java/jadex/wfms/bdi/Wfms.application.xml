<!--
	<H3>The Workflow Management System descriptor</H3>

	Can be used to start the Workflow Management System Agents and Workflow Application Clients.
-->

<applicationtype xmlns="http://jadex.sourceforge.net/jadex-application"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-application 
	                    http://jadex.sourceforge.net/jadex-application-2.0.xsd"
	name="Wfms" package="jadex.wfms.bdi">
	
	<imports>
		<import>jadex.wfms.bdi.clientinterface.*</import>
		<import>jadex.wfms.bdi.pdinterface.*</import>
		<import>jadex.wfms.bdi.client.standard.*</import>
	</imports>
	
	<componenttypes>
		<componenttype name="WfmsClientInterfaceAgent" filename="jadex/wfms/bdi/clientinterface/WfmsClientInterface.agent.xml"/>
		<componenttype name="WfmsPdInterfaceAgent" filename="jadex/wfms/bdi/pdinterface/WfmsPdInterface.agent.xml"/>
		<componenttype name="ClientApplication" filename="jadex/wfms/bdi/client/standard/StandardClientApplication.agent.xml"/>
	</componenttypes>
	
	<applications>
		<application name="WFMS and one client application">
			<components>
				<agent type="WfmsClientInterfaceAgent"/>
				<agent type="WfmsPdInterfaceAgent"/>
				<agent type="ClientApplication"/>
			</components>
		</application>
		<application name="WFMS and two client applications">
			<components>
				<agent type="WfmsClientInterfaceAgent"/>
				<agent type="WfmsPdInterfaceAgent"/>
				<agent type="ClientApplication" number="2"/>
			</components>
		</application>
		<application name="WFMS only">
			<components>
				<agent type="WfmsClientInterfaceAgent"/>
				<agent type="WfmsPdInterfaceAgent"/>
			</components>
		</application>
	</applications>

</applicationtype>
