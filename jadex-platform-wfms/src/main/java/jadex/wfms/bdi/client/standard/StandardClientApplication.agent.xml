<?xml version="1.0" encoding="UTF-8"?>
<!--
	<H3>The Standard Workflow Management Application.</H3>
-->
<agent xmlns="http://jadex.sourceforge.net/jadex-bdi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex-bdi
	                    http://jadex.sourceforge.net/jadex-bdi-2.0.xsd"
	   name="StandardClientApplication"
	   package="jadex.wfms.bdi.client.standard">

	<imports>
		<import>jadex.wfms.bdi.*</import>
		<import>jadex.wfms.bdi.ontology.*</import>
		<import>jadex.wfms.client.IWorkitem</import>
	</imports>

	<capabilities>
		<capability name="clientcap" file="jadex.wfms.bdi.client.cap.WfmsClientApp"/>
	</capabilities>

	<beliefs>
		<belief name="client_gui" class="StandardClientApplication">
			<fact>new StandardClientApplication($scope.getExternalAccess())</fact>
		</belief>
		<beliefref name="add_workitem_controller" class="javax.swing.Action">
			<concrete ref="clientcap.add_workitem_controller"/>
		</beliefref>
		<beliefref name="remove_workitem_controller" class="javax.swing.Action">
			<concrete ref="clientcap.remove_workitem_controller"/>
		</beliefref>
		<beliefref name="add_activity_controller" class="javax.swing.Action">
			<concrete ref="clientcap.add_activity_controller"/>
		</beliefref>
		<beliefref name="remove_activity_controller" class="javax.swing.Action">
			<concrete ref="clientcap.remove_activity_controller"/>
		</beliefref>
	</beliefs>

	<goals>
	</goals>

	<plans>
	</plans>

	<events>
	</events>

	<expressions>
	</expressions>

	<properties>
		<!-- <property name="debugging">false</property> -->
	</properties>

</agent>
