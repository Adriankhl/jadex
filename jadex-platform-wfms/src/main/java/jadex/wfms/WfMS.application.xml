<?xml version="1.0" encoding="UTF-8"?>
<!--
	<H3>Workflow Management System</H3>

	Can be used to launch the workflow management system.<br>
-->
<applicationtype xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:agr="http://jadex.sourceforge.net/jadex-agrspace"
	xmlns:env="http://jadex.sourceforge.net/jadex-envspace"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex 
	                    http://jadex.sourceforge.net/jadex-application-2.0.xsd
	                    http://jadex.sourceforge.net/jadex-agrspace 
	                    http://jadex.sourceforge.net/jadex-agrspace-2.0.xsd
	                    http://jadex.sourceforge.net/jadex-envspace 
	                    http://jadex.sourceforge.net/jadex-envspace-2.0.xsd"
	name="WorkflowManagementSystem" package="jadex.wfms">
	
	<imports>
		<import>jadex.wfms.service.*</import>
		<import>jadex.wfms.service.impl.*</import>
	</imports>

	<componenttypes>
	</componenttypes>
	
	<services>
		<providedservice class="IAAAService">
			<implementation>
				jadex.wfms.service.impl.BasicAAAService.getTestService($component.getServiceProvider())
			</implementation>
		</providedservice>
		<providedservice class="IExecutionService">
			<implementation>
				new ExecutionService($component.getComponentIdentifier(), $component.getExternalAccess())
			</implementation>
		</providedservice>
		<providedservice class="IExternalWfmsService">
			<implementation>
				new ExternalWfmsService($component.getServiceProvider())
			</implementation>
		</providedservice>
		<providedservice class="IWorkitemHandlerService">
			<implementation>
				new WorkitemHandlerService($component.getServiceProvider())
			</implementation>
		</providedservice>
		<providedservice class="IModelRepositoryService">
			<implementation>
				new LinkedModelRepositoryService($component.getServiceProvider())
			</implementation>
		</providedservice>
		<providedservice class="ILogService">
			<implementation>
				new LogService($component.getServiceProvider())
			</implementation>
		</providedservice>
	</services>

	<configurations>
		<configuration name="Workflow Management System">
 		</configuration>
	</configurations>

</applicationtype>
