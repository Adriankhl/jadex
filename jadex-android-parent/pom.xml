					</configuration>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>2.2.1</version>
					<configuration>
					</configuration>
				</plugin>

			</plugins>
		</pluginManagement>
	</build>
</project>
