<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.sourceforge.jadex</groupId>
	<artifactId>jadex-android-parent</artifactId>
	<version>2.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>jadex-android-parent</name>

	<properties>
		<maven-compiler-plugin-version>2.3.2</maven-compiler-plugin-version>
		<java-version>1.6</java-version>
		<maven-antrun-plugin-version>1.6</maven-antrun-plugin-version>
		<android-maven-plugin-version>3.1.1</android-maven-plugin-version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<munge-default-excludes>**/.svn/,**/ui/,**/gui/,**/*.png</munge-default-excludes>
		<munge-generated-sources-dir>src/gen/java</munge-generated-sources-dir>
	</properties>

	<dependencies>
		<!-- To get all android-related errors, uncomment the following dependency -->
		<!-- and remove the JRE from eclipse build path. -->
		<!-- <dependency> -->
		<!-- <groupId>proprietary</groupId> -->
		<!-- <artifactId>android</artifactId> -->
		<!-- <version>2.2.1</version> -->
		<!-- <scope>system</scope> -->
		<!-- <systemPath>/home/julakali/android/android-sdk-linux_86/platforms/android-8/android.jar</systemPath> -->
		<!-- <systemPath>/scratch/8kalinow/android-sdk-linux_x86/platforms/android-8/android.jar</systemPath> -->
		<!-- </dependency> -->

		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<version>2.2.1</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.pivotallabs</groupId>
			<artifactId>robolectric</artifactId>
			<version>1.0</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>default</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.sonatype.plugins</groupId>
							<artifactId>munge-maven-plugin</artifactId>
							<version>1.0</version>
							<executions>
								<execution>
									<id>generate-android-sources</id>
									<phase>generate-sources</phase>
									<goals>
										<goal>munge</goal>
									</goals>
								</execution>
							</executions>
							<configuration>
								<sourceDirectory>${basedir}/../src/main/java</sourceDirectory>
								<mungedDirectory>${basedir}/${munge-generated-sources-dir}</mungedDirectory>
								<symbols>android,android8</symbols>
								<excludes>${munge-default-excludes}</excludes>
							</configuration>
						</plugin>

						<plugin>
							<groupId>com.google.code.maven-replacer-plugin</groupId>
							<artifactId>replacer</artifactId>
							<version>1.5.0</version>
							<executions>
								<execution>
									<phase>process-sources</phase>
									<goals>
										<goal>replace</goal>
									</goals>
									<configuration>
										<filesToInclude>${munge-generated-sources-dir}/**/*.java</filesToInclude>
										<replacements>
											<replacement>
												<token>import javax.swing.*;</token>
												<value></value>
											</replacement>
											<replacement>
												<token>import java.awt.*;</token>
												<value></value>
											</replacement>
											<replacement>
												<token>javax.xml</token>
												<value>javaxx.xml</value>
											</replacement>
											<replacement>
												<token>javax.naming</token>
												<value>javaxx.naming</value>
											</replacement>
											<replacement>
												<token>java.beans</token>
												<value>javaa.beans</value>
											</replacement>
										</replacements>
									</configuration>
								</execution>
							</executions>
						</plugin>
						<plugin>
							<artifactId>maven-clean-plugin</artifactId>
							<version>2.4.1</version>
							<configuration>
								<filesets>
									<fileset>
										<directory>src/gen/java</directory>
										<includes>
											<include>**/*</include>
										</includes>
										<followSymlinks>false</followSymlinks>
									</fileset>
								</filesets>
							</configuration>
						</plugin>

					</plugins>
				</pluginManagement>
			</build>
		</profile>
		<profile>
			<!-- deactivate munge and replacer if these are the distributed android 
				sources -->
			<id>standalone-project</id>
			<activation>
				<file>
					<missing>../../jadex-android-parent/do-not-remove.txt</missing>
				</file>
			</activation>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.sonatype.plugins</groupId>
							<artifactId>munge-maven-plugin</artifactId>
							<version>1.0</version>
							<executions>
								<execution>
									<id>generate-android-sources</id>
									<phase>none</phase>
								</execution>
							</executions>
						</plugin>

						<plugin>
							<groupId>com.google.code.maven-replacer-plugin</groupId>
							<artifactId>replacer</artifactId>
							<version>1.5.0</version>
							<executions>
								<execution>
									<phase>none</phase>
								</execution>
							</executions>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
	</profiles>


	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.sonatype.plugins
										</groupId>
										<artifactId>
											munge-maven-plugin
										</artifactId>
										<versionRange>
											[1.0,)
										</versionRange>
										<goals>
											<goal>munge</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<execute>
											<runOnIncremental>true</runOnIncremental>
										</execute>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											com.google.code.maven-replacer-plugin
										</groupId>
										<artifactId>
											replacer
										</artifactId>
										<versionRange>
											[1.5.0,)
										</versionRange>
										<goals>
											<goal>replace</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<execute>
											<runOnIncremental>true</runOnIncremental>
										</execute>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-gpg-plugin</artifactId>
					<version>1.1</version>
					<executions>
						<execution>
							<id>sign-artifacts</id>
							<phase>install</phase>
							<configuration>
								<skip>true</skip>
							</configuration>
						</execution>
					</executions>
				</plugin>

				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>build-helper-maven-plugin</artifactId>
					<version>1.7</version>
				</plugin>

				<!-- <plugin> -->
				<!-- <artifactId>maven-antrun-plugin</artifactId> -->
				<!-- <version>${maven-antrun-plugin-version}</version> -->
				<!-- <executions> -->
