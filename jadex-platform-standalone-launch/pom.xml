	</dependencies>
	
	<!-- Only include depedency when jmonkey extension present to allow dist build without 3d addon sources. -->
	<profiles>
	    <profile>
	        <id>jmonkey</id>
	        <activation>
	            <file>
	                <exists>../jadex-kernel-extension-envsupport-jmonkey</exists>
	            </file>
	        </activation>
	        <dependencies>
	          	<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-extension-envsupport-jmonkey</artifactId>
					<version>2.1-SNAPSHOT</version>
				</dependency>
	        </dependencies>
	    </profile>
	    <profile>
	        <id>mavendependency</id>
	        <activation>
	            <file>
	                <exists>../jadex-platform-extension-maven</exists>
	            </file>
	        </activation>
	        <dependencies>
	          	<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-platform-extension-maven</artifactId>
					<version>2.1-SNAPSHOT</version>
				</dependency>
	        </dependencies>
	    </profile>
	    <profile>
	        <id>webservice</id>
	        <activation>
	            <file>
	                <exists>../jadex-platform-extension-webservice</exists>
	            </file>
	        </activation>
	        <dependencies>
	          	<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-platform-extension-webservice</artifactId>
					<version>2.1-SNAPSHOT</version>
				</dependency>
	        </dependencies>
	    </profile>
	    <profile>
	        <id>sectrans</id>
	        <activation>
	            <file>
	                <exists>../jadex-platform-extension-securetransport</exists>
	            </file>
	        </activation>
	        <dependencies>
	          	<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-platform-extension-securetransport</artifactId>
					<version>2.1-SNAPSHOT</version>
				</dependency>
	        </dependencies>
	    </profile>
	</profiles>
	
</project>
