
<nifty>
	<useControls filename="nifty-default-controls.xml" />
	<useStyles filename="nifty-default-styles.xml" />


	<screen id="hud"
		controller="jadex.extension.envsupport.observer.graphics.jmonkey.controller.GuiController">
		<layer id="background" childLayout="center">

		</layer>
		<layer id="foreground" childLayout="horizontal">


			<panel id="panel_left" width="5%" height="100%" childLayout="vertical">


				<panel id="panel_top_left" width="100%" height="99%" valign="top" />

				<panel id="panel_bottom_left" width="100%" height="1%"
					valign="bottom" childLayout="horizontal">
					<control name="button" label="Fullscreen" id="FireButton"
						align="center" valign="bottom" visibleToMouse="true">
						<interact onClick="fireFullscreen()" />
					</control>
					<control name="button" label="Options" id="OptionsButton"
						align="center" valign="bottom" visibleToMouse="true">
						<interact onClick="options()" />
					</control>
				</panel>

			</panel>



			<panel id="panel_right" width="95%" height="100%" />

		</layer>
	</screen>
	
		<screen id="default"
		controller="jadex.extension.envsupport.observer.graphics.jmonkey.controller.GuiController">
		<layer id="background" childLayout="center">

		</layer>
		<layer id="foreground" childLayout="horizontal">

		</layer>
	</screen>
</nifty>