<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>jadex-kernel-extension-envsupport-jmonkey</artifactId>
	<packaging>jar</packaging>
	<name>jadex-kernel-extension-envsupport-jmonkey</name>
	<parent>
		<groupId>net.sourceforge.jadex</groupId>
		<artifactId>jadex-parent</artifactId>
		<version> 2.3-SNAPSHOT </version>
		<relativePath>../jadex-parent/pom.xml</relativePath>
	</parent>

	<description>
		This extensions allows for visualizing 3d environments of
		envsupport applications.
	</description>

	<properties>
		<jmonkey.version>3.0.0.20130125-SNAPSHOT</jmonkey.version>
		<!-- <jmonkey.version>[3.0.0-SNAPSHOT,)</jmonkey.version> -->
		<project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
	</properties>

	<repositories>
		<repository>
			<id>sonatype-public</id>
			<name>sonatype public</name>
			<url>https://oss.sonatype.org/content/groups/public/</url>
		</repository>
	</repositories>

	<dependencies>

		<!-- JMonkey Spezific -->
		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>jmonkeyengine3</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>jME3-core</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>jME3-terrain</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>jME3-lwjgl</artifactId>
			<version>${jmonkey.version}</version>
			<scope>runtime</scope>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>jME3-lwjgl-natives</artifactId>
			<version>${jmonkey.version}</version>
			<scope>runtime</scope>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>jME3-effects</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>lwjgl</artifactId>
			<version>${jmonkey.version}</version>
			<scope>runtime</scope>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>jME3-blender</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>jME3-desktop</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>


		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>jME3-plugins</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>jME3-testdata</artifactId>
			<version>${jmonkey.version}</version>
			<scope>runtime</scope>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>jME3-jogg</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>j-ogg-oggd</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>j-ogg-vorbisd</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>jME3-niftygui</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>nifty</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>nifty-default-controls</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.jadex.jme3ext</groupId>
			<artifactId>nifty-style-black</artifactId>
			<version>${jmonkey.version}</version>
		</dependency>

		<!-- End of Spezific -->
		<dependency>
			<groupId>org.bushe</groupId>
			<artifactId>eventbus</artifactId>
			<version>1.3</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-javaparser</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-kernel-extension-envsupport</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>net.sourceforge.jadex</groupId>
			<artifactId>jadex-commons</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>
			<groupId>xpp3</groupId>
			<artifactId>xpp3</artifactId>
			<version>1.1.4c</version>
		</dependency>
		
	</dependencies>

	<!-- Set scopes of standard jadex jars to provided for excluding them from 
		dist -->
	<profiles>
		<profile>
			<id>dist</id>
			<dependencies>
				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-javaparser</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>

				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-kernel-extension-envsupport</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>

				<dependency>
					<groupId>net.sourceforge.jadex</groupId>
					<artifactId>jadex-commons</artifactId>
					<version>${project.version}</version>
					<scope>provided</scope>
				</dependency>
			</dependencies>
		</profile>

		<!-- ======== deployment only to jadex nexus (i.e. not central) ======== -->

		<!-- We need this profile as workaround for including .apks in maven assemblies -->
		<profile>
			<id>deploy</id>
			<distributionManagement>
				<repository>
					<id>jadex-public-releases</id>
					<name>Jadex Release Repository</name>
					<url>http://localhost/nexus/content/repositories/releases/</url>
					<uniqueVersion>false</uniqueVersion>
				</repository>
				<snapshotRepository>
					<id>jadex-public-snapshots</id>
					<name>Jadex Snapshot Repository</name>
					<url>http://localhost/nexus/content/repositories/snapshots/</url>
					<uniqueVersion>false</uniqueVersion>
				</snapshotRepository>
			</distributionManagement>
		</profile>
		
	</profiles>

</project>